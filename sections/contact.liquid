{% comment %}
  Contact Section "Lunetier"
  Design: Concierge Approach, underlined fields, asymmetric layout.
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    background-color: #ffffff;
    color: #111827;
    /* Generous space for sticky header */
    padding-top: 10rem; 
    padding-bottom: 8rem;
  }

  .lunetier-contact-container {
    max-width: 80rem; /* max-w-7xl */
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* --- HEADER --- */
  .lunetier-contact-header {
    margin-bottom: 5rem;
    text-align: center;
    max-width: 40rem;
    margin-left: auto;
    margin-right: auto;
  }

  .lunetier-contact-title {
    font-family: serif;
    font-size: 3rem;
    font-weight: 400;
    margin-bottom: 1rem;
    line-height: 1.1;
  }

  .lunetier-contact-desc {
    font-family: sans-serif;
    color: #6b7280;
    font-size: 1rem;
    line-height: 1.6;
  }

  /* --- GRID LAYOUT --- */
  .lunetier-contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
  }

  @media (min-width: 1024px) {
    .lunetier-contact-grid {
      grid-template-columns: 1fr 1.5fr; /* Info (small) | Form (large) */
      gap: 6rem;
      align-items: start;
    }
  }

  /* --- LEFT COLUMN: INFO & IMAGE --- */
  .lunetier-info-col {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .lunetier-info-block h3 {
    font-family: serif;
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .lunetier-info-block p, 
  .lunetier-info-block a {
    font-family: sans-serif;
    font-size: 0.9rem;
    color: #4b5563;
    line-height: 1.6;
    text-decoration: none;
    display: block;
    margin-bottom: 0.25rem;
  }

  .lunetier-info-block a:hover {
    color: #000;
  }

  .lunetier-contact-img {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    background-color: #f3f4f6;
    margin-top: 1rem;
  }

  /* --- RIGHT COLUMN: FORM --- */
  .lunetier-form-wrapper {
    background: #fff;
  }

  .lunetier-field-group {
    margin-bottom: 2.5rem;
  }

  .lunetier-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    color: #111;
  }

  .lunetier-input,
  .lunetier-textarea,
  .lunetier-select {
    width: 100%;
    border: none;
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 0;
    font-family: sans-serif;
    font-size: 1rem;
    color: #111;
    background: transparent;
    transition: border-color 0.3s;
    border-radius: 0;
    -webkit-appearance: none;
  }

  .lunetier-input:focus,
  .lunetier-textarea:focus,
  .lunetier-select:focus {
    outline: none;
    border-bottom-color: #000;
  }

  .lunetier-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .lunetier-submit {
    display: inline-block;
    background-color: #000;
    color: #fff;
    padding: 1.25rem 3rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s;
    margin-top: 1rem;
  }

  .lunetier-submit:hover {
    background-color: #333;
  }

  /* Messages */
  .lunetier-success {
    padding: 1rem;
    background-color: #f0fdf4;
    color: #166534;
    margin-bottom: 2rem;
    font-size: 0.9rem;
  }
  
  .lunetier-error {
    padding: 1rem;
    background-color: #fef2f2;
    color: #991b1b;
    margin-bottom: 2rem;
    font-size: 0.9rem;
  }

</style>

<div class="lunetier-contact-container">
  
  <!-- HEADER -->
  <div class="lunetier-contact-header">
    <h1 class="lunetier-contact-title">{{ section.settings.title | default: "Contact Us" }}</h1>
    <div class="lunetier-contact-desc">
      {{ section.settings.description | default: "Our concierge service is available Monday to Friday, 9am to 6pm." }}
    </div>
  </div>

  <div class="lunetier-contact-grid">
    
    <!-- LEFT: INFO -->
    <div class="lunetier-info-col">
      <div class="lunetier-info-block">
        <h3>Customer Service</h3>
        <p>Questions about your order or our frames?</p>
        <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
        <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
      </div>

      <div class="lunetier-info-block">
        <h3>Press & Partnerships</h3>
        <p>For collaboration inquiries.</p>
        <a href="mailto:press@lunetier.com">press@lunetier.com</a>
      </div>

      <div class="lunetier-info-block">
        <h3>Showroom</h3>
        <p>24 Rue de la Vision<br>75003 Paris, France</p>
      </div>

      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 600 | image_tag: 
          class: 'lunetier-contact-img', 
          loading: 'lazy',
          alt: 'Our Workshop'
        }}
      {%- endif -%}
    </div>

    <!-- RIGHT: FORM -->
    <div class="lunetier-form-wrapper">
      {%- form 'contact' -%}
        
        {%- if form.posted_successfully? -%}
          <div class="lunetier-success">
            Thank you. Your message has been sent successfully. Our team will respond within 24 hours.
          </div>
        {%- elsif form.errors -%}
          <div class="lunetier-error">
            Please correct the errors below: {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        <div class="lunetier-field-group">
          <label for="ContactFormName" class="lunetier-label">Full Name</label>
          <input type="text" id="ContactFormName" name="contact[name]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" class="lunetier-input" placeholder="Your name" required>
        </div>

        <div class="lunetier-field-group">
          <label for="ContactFormEmail" class="lunetier-label">Email</label>
          <input type="email" id="ContactFormEmail" name="contact[email]" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="lunetier-input" placeholder="your@email.com" required>
        </div>

        <div class="lunetier-field-group">
          <label for="ContactFormPhone" class="lunetier-label">Phone (Optional)</label>
          <input type="tel" id="ContactFormPhone" name="contact[phone]" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" class="lunetier-input" placeholder="+33 6...">
        </div>

        <div class="lunetier-field-group">
          <label for="ContactFormSubject" class="lunetier-label">Subject</label>
          <select id="ContactFormSubject" name="contact[subject]" class="lunetier-select">
            <option value="Product information">Product information</option>
            <option value="Order tracking">Order tracking</option>
            <option value="Return / Exchange">Return / Exchange</option>
            <option value="Other">Other</option>
          </select>
        </div>

        <div class="lunetier-field-group">
          <label for="ContactFormMessage" class="lunetier-label">Message</label>
          <textarea rows="10" id="ContactFormMessage" name="contact[body]" class="lunetier-textarea" placeholder="How can we help you?" required>{% if form.body %}{{ form.body }}{% endif %}</textarea>
        </div>

        <button type="submit" class="lunetier-submit">
          Send message
        </button>

      {%- endform -%}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Contact",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Contact Us"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our concierge service is available Monday to Friday, 9am to 6pm."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Atmosphere image"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Contact email",
      "default": "hello@lunetier.com"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "01 23 45 67 89"
    }
  ],
  "presets": [
    {
      "name": "Contact"
    }
  ]
}
{% endschema %}