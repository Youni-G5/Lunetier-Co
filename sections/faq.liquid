{% comment %}
  FAQ Section "Lunetier" - Minimalist Accordions
  Design: Centered, clean, elegant typography.
  Fix: Box-sizing and forced widths for visual stability.
{% endcomment %}

<style>
  /* Global fix to avoid width jumps */
  #shopify-section-{{ section.id }} * {
    box-sizing: border-box;
  }

  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: 5rem;
    padding-bottom: 5rem;
    color: #111827;
  }

  .lunetier-faq-container {
    max-width: 48rem; /* max-w-3xl */
    margin: 0 auto;
    padding: 0 1.5rem;
    width: 100%; /* Ensures container takes available space */
  }

  /* --- HEADER --- */
  .lunetier-faq-header {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .lunetier-faq-title {
    font-family: serif;
    font-size: 2rem;
    font-weight: 500;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  @media (min-width: 768px) {
    .lunetier-faq-title {
      font-size: 2.5rem;
    }
  }

  .lunetier-faq-desc {
    color: #6b7280;
    font-family: sans-serif;
    font-size: 1rem;
  }

  /* --- ACCORDIONS --- */
  .lunetier-faq-list {
    display: flex;
    flex-direction: column;
    border-top: 1px solid #e5e7eb;
    width: 100%; /* Forces stable width */
  }

  .lunetier-faq-item {
    border-bottom: 1px solid #e5e7eb;
    width: 100%; /* Forces stable width */
    display: block; /* Ensures block behavior */
  }

  .lunetier-faq-summary {
    list-style: none;
    padding: 1.5rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    width: 100%;
    transition: color 0.2s;
  }

  .lunetier-faq-summary::-webkit-details-marker {
    display: none;
  }

  .lunetier-faq-summary:hover .lunetier-faq-question {
    color: #4b5563;
  }

  .lunetier-faq-question {
    font-family: sans-serif;
    font-size: 1.125rem;
    font-weight: 500;
    color: #111827;
    text-align: left;
    padding-right: 1rem;
    flex: 1; /* Takes all available space */
  }

  /* +/- Icon */
  .lunetier-faq-icon {
    position: relative;
    width: 14px;
    height: 14px;
    flex-shrink: 0;
  }

  .lunetier-faq-icon::before,
  .lunetier-faq-icon::after {
    content: '';
    position: absolute;
    background-color: #000;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: transform 0.3s ease;
  }

  .lunetier-faq-icon::before { width: 100%; height: 2px; }
  .lunetier-faq-icon::after { width: 2px; height: 100%; }

  details[open] .lunetier-faq-icon::after {
    transform: translate(-50%, -50%) rotate(90deg);
    height: 0;
  }

  .lunetier-faq-answer {
    padding-bottom: 1.5rem;
    color: #4b5563;
    line-height: 1.7;
    font-family: sans-serif;
    font-size: 1rem;
    padding-right: 2rem;
    width: 100%; /* Content stability */
  }
</style>

<div class="lunetier-faq-container">
  
  <div class="lunetier-faq-header">
    <h2 class="lunetier-faq-title">{{ section.settings.title }}</h2>
    {% if section.settings.description != blank %}
      <p class="lunetier-faq-desc">{{ section.settings.description }}</p>
    {% endif %}
  </div>

  <div class="lunetier-faq-list">
    {%- for block in section.blocks -%}
      <details class="lunetier-faq-item" {% if block.settings.open_default %}open{% endif %}>
        <summary class="lunetier-faq-summary">
          <span class="lunetier-faq-question">{{ block.settings.question }}</span>
          <span class="lunetier-faq-icon"></span>
        </summary>
        <div class="lunetier-faq-answer">
          {{ block.settings.answer }}
        </div>
      </details>
    {%- endfor -%}
  </div>

</div>

{% schema %}
{
  "name": "FAQ Lunetier",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Everything you need to know about our eyewear and services."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What are the delivery times?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>We ship all orders within 24 hours. Delivery then takes 2 to 3 business days in mainland France.</p>"
        },
        {
          "type": "checkbox",
          "id": "open_default",
          "label": "Open by default?",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Lunetier",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "question": "Can I add prescription lenses?",
            "answer": "<p>Absolutely. Once you receive your frame, visit your usual optician. Our acetate frames are designed to fit all types of prescription lenses.</p>"
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "How does the home trial work?",
            "answer": "<p>You have 30 days after receipt to try your glasses. If they don't suit you, use the prepaid return label included in the package for a full refund.</p>"
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "What is the warranty?",
            "answer": "<p>All our frames are guaranteed for 2 years against any manufacturing defects (hinges, materials, assembly).</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}