{% comment %}
  Footer Section - Shopify Best Practices
  Mobile-first responsive design
{% endcomment %}

<style>
  /* === BASE STYLES (MOBILE FIRST) === */
  .footer-v3 {
    background-color: #fafafa;
    color: #1a1a1a;
    padding: 60px 0 30px;
    border-top: 1px solid #e5e7eb;
    width: 100%;
  }

  .footer-v3__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* === BRAND SECTION === */
  .footer-v3__brand {
    margin-bottom: 40px;
  }

  .footer-v3__logo {
    font-family: Georgia, serif;
    font-size: 24px;
    font-weight: 400;
    margin: 0 0 15px 0;
    color: #000;
  }

  .footer-v3__tagline {
    font-size: 14px;
    line-height: 1.6;
    color: #6b7280;
    margin-bottom: 20px;
  }

  /* === NEWSLETTER === */
  .footer-v3__newsletter-title {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin: 0 0 12px 0;
    color: #000;
  }

  .footer-v3__newsletter-form {
    display: flex;
    width: 100%;
    max-width: 400px;
  }

  .footer-v3__newsletter-input {
    flex: 1;
    padding: 14px 16px;
    background: #fff;
    border: 1px solid #d1d5db;
    color: #000;
    font-size: 14px;
    -webkit-appearance: none;
    appearance: none;
  }

  .footer-v3__newsletter-input:focus {
    outline: none;
    border-color: #000;
  }

  .footer-v3__newsletter-button {
    padding: 14px 24px;
    background: #000;
    color: #fff;
    border: 1px solid #000;
    border-left: none;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    -webkit-appearance: none;
    appearance: none;
  }

  .footer-v3__newsletter-button:active {
    background: #1f2937;
  }

  /* === MENU COLUMNS (MOBILE BASE) === */
  .footer-v3__menus {
    margin-top: 40px;
    padding-bottom: 40px;
    border-bottom: 1px solid #e5e7eb;
  }

  .footer-v3__menu-col {
    margin-bottom: 30px;
  }

  .footer-v3__menu-col:last-child {
    margin-bottom: 0;
  }

  .footer-v3__menu-title {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin: 0 0 15px 0;
    color: #000;
  }

  .footer-v3__menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-v3__menu-item {
    margin-bottom: 10px;
  }

  .footer-v3__menu-link {
    color: #6b7280;
    text-decoration: none;
    font-size: 14px;
    display: inline-block;
  }

  .footer-v3__menu-link:hover {
    color: #000;
  }

  /* === BOTTOM BAR (MOBILE BASE) === */
  .footer-v3__bottom {
    padding-top: 30px;
    text-align: center;
  }

  .footer-v3__social {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
  }

  .footer-v3__social-link {
    color: #6b7280;
    display: flex;
  }

  .footer-v3__social-link:hover {
    color: #000;
  }

  .footer-v3__social-icon {
    width: 18px;
    height: 18px;
  }

  .footer-v3__lang {
    margin-bottom: 20px;
  }

  .footer-v3__payment {
    display: flex;
    justify-content: center;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .footer-v3__payment-icon {
    height: 22px;
    width: auto;
  }

  .footer-v3__copyright {
    font-size: 12px;
    color: #9ca3af;
    margin: 0;
  }

  .footer-v3__copyright-link {
    color: #6b7280;
    text-decoration: none;
  }

  .footer-v3__copyright-link:hover {
    color: #000;
  }

  /* ========================================
     TABLET: min-width 500px
     ======================================== */
  @media screen and (min-width: 500px) {
    .footer-v3__menus {
      display: flex;
      flex-wrap: wrap;
      gap: 30px;
    }

    .footer-v3__menu-col {
      flex: 0 0 calc(50% - 15px);
      margin-bottom: 30px;
    }

    .footer-v3__menu-col:nth-last-child(-n+2) {
      margin-bottom: 0;
    }
  }

  /* ========================================
     TABLET: min-width 750px (Shopify standard)
     ======================================== */
  @media screen and (min-width: 750px) {
    .footer-v3__container {
      padding: 0 40px;
    }

    .footer-v3__logo {
      font-size: 28px;
    }

    .footer-v3__menus {
      gap: 40px;
    }

    .footer-v3__menu-col {
      flex: 0 0 calc(33.333% - 27px);
      margin-bottom: 0;
    }

    .footer-v3__menu-title {
      font-size: 12px;
      margin-bottom: 20px;
    }

    .footer-v3__menu-item {
      margin-bottom: 12px;
    }

    .footer-v3__menu-link {
      font-size: 15px;
    }

    .footer-v3__social-icon {
      width: 20px;
      height: 20px;
    }

    .footer-v3__payment-icon {
      height: 24px;
    }

    .footer-v3__bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      text-align: left;
    }

    .footer-v3__bottom-left {
      display: flex;
      align-items: center;
      gap: 30px;
    }

    .footer-v3__bottom-right {
      display: flex;
      align-items: center;
      gap: 30px;
    }

    .footer-v3__social,
    .footer-v3__lang,
    .footer-v3__payment {
      margin-bottom: 0;
    }

    .footer-v3__payment {
      justify-content: flex-start;
    }
  }

  /* ========================================
     DESKTOP: min-width 990px (Shopify standard)
     ======================================== */
  @media screen and (min-width: 990px) {
    .footer-v3 {
      padding: 80px 0 40px;
    }

    .footer-v3__container {
      padding: 0 50px;
    }

    .footer-v3__top {
      display: flex;
      gap: 60px;
      padding-bottom: 50px;
      border-bottom: 1px solid #e5e7eb;
    }

    .footer-v3__brand {
      flex: 0 0 400px;
      margin-bottom: 0;
    }

    .footer-v3__menus {
      flex: 1;
      margin-top: 0;
      padding-bottom: 0;
      border-bottom: none;
      gap: 50px;
    }

    .footer-v3__menu-col {
      flex: 1;
    }

    .footer-v3__bottom {
      padding-top: 40px;
    }
  }
</style>

<footer class="footer-v3" role="contentinfo">
  <div class="footer-v3__container">
    
    <div class="footer-v3__top">
      <!-- BRAND + NEWSLETTER -->
      <div class="footer-v3__brand">
        <h2 class="footer-v3__logo">
          {%- if section.settings.footer_logo != blank -%}
            {{ section.settings.footer_logo }}
          {%- else -%}
            {{ shop.name }}
          {%- endif -%}
        </h2>
        
        <p class="footer-v3__tagline">
          {{ section.settings.tagline | default: "French design, premium quality. Eyewear that enhances your style and protects your vision." }}
        </p>

        {%- if section.settings.show_newsletter -%}
          <div class="footer-v3__newsletter">
            <h3 class="footer-v3__newsletter-title">Newsletter</h3>
            <form action="/contact#newsletter" method="post" class="footer-v3__newsletter-form">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input 
                type="email" 
                name="contact[email]" 
                placeholder="Your email" 
                class="footer-v3__newsletter-input"
                required
              >
              <button type="submit" class="footer-v3__newsletter-button">OK</button>
            </form>
          </div>
        {%- endif -%}
      </div>

      <!-- MENUS -->
      <div class="footer-v3__menus">
        <div class="footer-v3__menu-col">
          <h3 class="footer-v3__menu-title">{{ section.settings.menu_1_title | default: "Help" }}</h3>
          <ul class="footer-v3__menu-list">
            {%- for link in section.settings.menu_1.links -%}
              <li class="footer-v3__menu-item">
                <a href="{{ link.url }}" class="footer-v3__menu-link">{{ link.title }}</a>
              </li>
            {%- else -%}
              <li class="footer-v3__menu-item"><a href="/pages/contact" class="footer-v3__menu-link">Contact</a></li>
              <li class="footer-v3__menu-item"><a href="/pages/shipping" class="footer-v3__menu-link">Shipping</a></li>
              <li class="footer-v3__menu-item"><a href="/pages/returns" class="footer-v3__menu-link">Returns</a></li>
              <li class="footer-v3__menu-item"><a href="/pages/faq" class="footer-v3__menu-link">FAQ</a></li>
            {%- endfor -%}
          </ul>
        </div>

        <div class="footer-v3__menu-col">
          <h3 class="footer-v3__menu-title">{{ section.settings.menu_2_title | default: "Shop" }}</h3>
          <ul class="footer-v3__menu-list">
            {%- for link in section.settings.menu_2.links -%}
              <li class="footer-v3__menu-item">
                <a href="{{ link.url }}" class="footer-v3__menu-link">{{ link.title }}</a>
              </li>
            {%- else -%}
              <li class="footer-v3__menu-item"><a href="/collections/all" class="footer-v3__menu-link">All Eyewear</a></li>
              <li class="footer-v3__menu-item"><a href="/collections/sunglasses" class="footer-v3__menu-link">Sunglasses</a></li>
              <li class="footer-v3__menu-item"><a href="/collections/optical" class="footer-v3__menu-link">Optical</a></li>
              <li class="footer-v3__menu-item"><a href="/collections/new" class="footer-v3__menu-link">New Arrivals</a></li>
            {%- endfor -%}
          </ul>
        </div>

        <div class="footer-v3__menu-col">
          <h3 class="footer-v3__menu-title">{{ section.settings.menu_3_title | default: "Legal" }}</h3>
          <ul class="footer-v3__menu-list">
            {%- for link in section.settings.menu_3.links -%}
              <li class="footer-v3__menu-item">
                <a href="{{ link.url }}" class="footer-v3__menu-link">{{ link.title }}</a>
              </li>
            {%- else -%}
              <li class="footer-v3__menu-item"><a href="/policies/privacy-policy" class="footer-v3__menu-link">Privacy</a></li>
              <li class="footer-v3__menu-item"><a href="/policies/terms-of-service" class="footer-v3__menu-link">Terms</a></li>
              <li class="footer-v3__menu-item"><a href="/policies/refund-policy" class="footer-v3__menu-link">Refunds</a></li>
            {%- endfor -%}
          </ul>
        </div>
      </div>
    </div>

    <!-- BOTTOM BAR -->
    <div class="footer-v3__bottom">
      <div class="footer-v3__bottom-left">
        <div class="footer-v3__social">
          {%- if section.settings.instagram_url != blank -%}
            <a href="{{ section.settings.instagram_url }}" class="footer-v3__social-link" target="_blank" rel="noopener" aria-label="Instagram">
              <svg class="footer-v3__social-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            </a>
          {%- endif -%}
          {%- if section.settings.facebook_url != blank -%}
            <a href="{{ section.settings.facebook_url }}" class="footer-v3__social-link" target="_blank" rel="noopener" aria-label="Facebook">
              <svg class="footer-v3__social-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </a>
          {%- endif -%}
          {%- if section.settings.tiktok_url != blank -%}
            <a href="{{ section.settings.tiktok_url }}" class="footer-v3__social-link" target="_blank" rel="noopener" aria-label="TikTok">
              <svg class="footer-v3__social-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/></svg>
            </a>
          {%- endif -%}
        </div>
        <div class="footer-v3__lang">
          {% render 'language-selector' %}
        </div>
      </div>

      <div class="footer-v3__bottom-right">
        {%- if section.settings.show_payment_icons -%}
          <div class="footer-v3__payment">
            {%- for type in shop.enabled_payment_types -%}
              {{ type | payment_type_svg_tag: class: 'footer-v3__payment-icon' }}
            {%- endfor -%}
          </div>
        {%- endif -%}
        
        <p class="footer-v3__copyright">
          &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.
          {%- if section.settings.show_powered_by -%}
            | <a href="https://www.shopify.com" target="_blank" class="footer-v3__copyright-link">Shopify</a>
          {%- endif -%}
        </p>
      </div>
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer Lunetier",
  "settings": [
    {
      "type": "header",
      "content": "Brand"
    },
    {
      "type": "text",
      "id": "footer_logo",
      "label": "Text logo",
      "info": "Leave blank to use shop name"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "French design, premium quality. Eyewear that enhances your style and protects your vision."
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter",
      "default": true
    },
    {
      "type": "header",
      "content": "Menus"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Menu 1 title",
      "default": "Help"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Menu 2 title",
      "default": "Shop"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    },
    {
      "type": "text",
      "id": "menu_3_title",
      "label": "Menu 3 title",
      "default": "Legal"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Menu 3"
    },
    {
      "type": "header",
      "content": "Social media"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok"
    },
    {
      "type": "header",
      "content": "Options"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true,
      "info": "Automatically displays payment methods enabled in your shop"
    },
    {
      "type": "checkbox",
      "id": "show_powered_by",
      "label": "Show 'Powered by Shopify'",
      "default": false
    }
  ]
}
{% endschema %}