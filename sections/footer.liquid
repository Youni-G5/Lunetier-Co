{% comment %}
  Section Footer "Lunetier" - Design Premium Moderne
  4 colonnes desktop, newsletter, réseaux sociaux, paiements natifs Shopify
{% endcomment %}

<style>
  .lunetier-footer {
    background-color: #fafafa;
    color: #1a1a1a;
    padding-top: 5rem;
    padding-bottom: 2rem;
    font-family: var(--font-sans);
    border-top: 1px solid var(--color-gray-200);
  }

  .lunetier-footer-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* === GRID PRINCIPALE === */
  .lunetier-footer-main {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--color-gray-200);
  }

  @media (min-width: 768px) {
    .lunetier-footer-main {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .lunetier-footer-main {
      grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 4rem;
    }
  }

  /* === COLONNE MARQUE === */
  .lunetier-footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .lunetier-footer-logo {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: 0.02em;
    color: var(--color-black);
  }

  .lunetier-footer-tagline {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-gray-600);
    max-width: 20rem;
  }

  /* Newsletter */
  .lunetier-newsletter {
    margin-top: 1rem;
  }

  .lunetier-newsletter-title {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    color: var(--color-black);
  }

  .lunetier-newsletter-form {
    display: flex;
    gap: 0;
    max-width: 24rem;
  }

  .lunetier-newsletter-input {
    flex: 1;
    padding: 0.875rem 1rem;
    background: var(--color-white);
    border: 1px solid var(--color-gray-300);
    border-right: none;
    color: var(--color-black);
    font-size: 0.875rem;
    font-family: var(--font-sans);
    transition: all 0.2s;
  }

  .lunetier-newsletter-input:focus {
    outline: none;
    border-color: var(--color-black);
  }

  .lunetier-newsletter-input::placeholder {
    color: var(--color-gray-400);
  }

  .lunetier-newsletter-btn {
    padding: 0.875rem 1.5rem;
    background: var(--color-black);
    color: var(--color-white);
    border: 1px solid var(--color-black);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .lunetier-newsletter-btn:hover {
    background: var(--color-gray-800);
    border-color: var(--color-gray-800);
  }

  /* === COLONNES MENU === */
  .lunetier-footer-col {
    display: flex;
    flex-direction: column;
  }

  .lunetier-footer-col-title {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.25rem;
    color: var(--color-black);
  }

  .lunetier-footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .lunetier-footer-link {
    color: var(--color-gray-600);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
    display: inline-block;
  }

  .lunetier-footer-link:hover {
    color: var(--color-black);
  }

  /* === BOTTOM BAR === */
  .lunetier-footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-top: 2rem;
  }

  @media (min-width: 768px) {
    .lunetier-footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  /* Social Links */
  .lunetier-social-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .lunetier-social-link {
    color: var(--color-gray-600);
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lunetier-social-link:hover {
    color: var(--color-black);
    transform: translateY(-2px);
  }

  .lunetier-social-link svg {
    width: 20px;
    height: 20px;
  }

  /* Payment Icons - Shopify Native */
  .lunetier-payment-icons {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .lunetier-payment-icons .payment-icon {
    height: 24px;
    width: auto;
  }

  /* Copyright */
  .lunetier-copyright {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--color-gray-200);
    margin-top: 2rem;
  }

  .lunetier-copyright p {
    font-size: 0.8rem;
    color: var(--color-gray-500);
    margin: 0;
  }

  .lunetier-copyright a {
    color: var(--color-gray-600);
    text-decoration: none;
    transition: color 0.2s;
  }

  .lunetier-copyright a:hover {
    color: var(--color-black);
  }
</style>

<footer class="lunetier-footer" role="contentinfo">
  <div class="lunetier-footer-container">
    
    <!-- MAIN GRID -->
    <div class="lunetier-footer-main">
      
      <!-- COLONNE 1 : MARQUE + NEWSLETTER -->
      <div class="lunetier-footer-brand">
        <h2 class="lunetier-footer-logo">
          {% if section.settings.footer_logo != blank %}
            {{ section.settings.footer_logo }}
          {% else %}
            {{ shop.name }}
          {% endif %}
        </h2>
        
        <p class="lunetier-footer-tagline">
          {{ section.settings.tagline | default: "Design français, qualité premium. Lunettes qui subliment votre style et protègent votre vision." }}
        </p>

        <!-- NEWSLETTER -->
        {%- if section.settings.show_newsletter -%}
          <div class="lunetier-newsletter">
            <h3 class="lunetier-newsletter-title">Newsletter</h3>
            <form action="/contact#newsletter" method="post" class="lunetier-newsletter-form">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input 
                type="email" 
                name="contact[email]" 
                placeholder="Votre email" 
                class="lunetier-newsletter-input"
                required
              >
              <button type="submit" class="lunetier-newsletter-btn">
                OK
              </button>
            </form>
          </div>
        {%- endif -%}
      </div>

      <!-- COLONNE 2 : AIDE -->
      <div class="lunetier-footer-col">
        <h3 class="lunetier-footer-col-title">{{ section.settings.menu_1_title | default: "Aide" }}</h3>
        <ul class="lunetier-footer-list">
          {%- for link in section.settings.menu_1.links -%}
            <li><a href="{{ link.url }}" class="lunetier-footer-link">{{ link.title }}</a></li>
          {%- else -%}
            <li><a href="/pages/contact" class="lunetier-footer-link">Contact</a></li>
            <li><a href="/pages/livraison" class="lunetier-footer-link">Livraison</a></li>
            <li><a href="/pages/retours" class="lunetier-footer-link">Retours</a></li>
            <li><a href="/pages/faq" class="lunetier-footer-link">FAQ</a></li>
          {%- endfor -%}
        </ul>
      </div>

      <!-- COLONNE 3 : BOUTIQUE -->
      <div class="lunetier-footer-col">
        <h3 class="lunetier-footer-col-title">{{ section.settings.menu_2_title | default: "Boutique" }}</h3>
        <ul class="lunetier-footer-list">
          {%- for link in section.settings.menu_2.links -%}
            <li><a href="{{ link.url }}" class="lunetier-footer-link">{{ link.title }}</a></li>
          {%- else -%}
            <li><a href="/collections/all" class="lunetier-footer-link">Toutes les lunettes</a></li>
            <li><a href="/collections/soleil" class="lunetier-footer-link">Solaires</a></li>
            <li><a href="/collections/vue" class="lunetier-footer-link">Optiques</a></li>
            <li><a href="/collections/nouveautes" class="lunetier-footer-link">Nouveautés</a></li>
          {%- endfor -%}
        </ul>
      </div>

      <!-- COLONNE 4 : LÉGAL -->
      <div class="lunetier-footer-col">
        <h3 class="lunetier-footer-col-title">{{ section.settings.menu_3_title | default: "Légal" }}</h3>
        <ul class="lunetier-footer-list">
          {%- for link in section.settings.menu_3.links -%}
            <li><a href="{{ link.url }}" class="lunetier-footer-link">{{ link.title }}</a></li>
          {%- else -%}
            <li><a href="/policies/privacy-policy" class="lunetier-footer-link">Confidentialité</a></li>
            <li><a href="/policies/terms-of-service" class="lunetier-footer-link">CGV</a></li>
            <li><a href="/policies/refund-policy" class="lunetier-footer-link">Remboursements</a></li>
          {%- endfor -%}
        </ul>
      </div>

    </div>

    <!-- BOTTOM BAR -->
    <div class="lunetier-footer-bottom">
      
      <!-- SOCIAL LINKS -->
      <div class="lunetier-social-links">
        {%- if section.settings.instagram_url != blank -%}
          <a href="{{ section.settings.instagram_url }}" class="lunetier-social-link" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          </a>
        {%- endif -%}
        
        {%- if section.settings.facebook_url != blank -%}
          <a href="{{ section.settings.facebook_url }}" class="lunetier-social-link" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
        {%- endif -%}
        
        {%- if section.settings.tiktok_url != blank -%}
          <a href="{{ section.settings.tiktok_url }}" class="lunetier-social-link" target="_blank" rel="noopener noreferrer" aria-label="TikTok">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/></svg>
          </a>
        {%- endif -%}
      </div>

      <!-- PAYMENT METHODS - SHOPIFY NATIVE -->
      {%- if section.settings.show_payment_icons -%}
        <div class="lunetier-payment-icons">
          {%- for type in shop.enabled_payment_types -%}
            {{ type | payment_type_svg_tag: class: 'payment-icon' }}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

    <!-- COPYRIGHT -->
    <div class="lunetier-copyright">
      <p>
        &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. Tous droits réservés.
        {%- if section.settings.show_powered_by -%}
          <span> | Créé avec <a href="https://www.shopify.com" target="_blank">Shopify</a></span>
        {%- endif -%}
      </p>
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer Lunetier",
  "settings": [
    {
      "type": "header",
      "content": "Marque"
    },
    {
      "type": "text",
      "id": "footer_logo",
      "label": "Logo texte",
      "info": "Laissez vide pour utiliser le nom de la boutique"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "Design fran\u00e7ais, qualit\u00e9 premium. Lunettes qui subliment votre style et prot\u00e8gent votre vision."
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Afficher newsletter",
      "default": true
    },
    {
      "type": "header",
      "content": "Menus"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Titre menu 1",
      "default": "Aide"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Titre menu 2",
      "default": "Boutique"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    },
    {
      "type": "text",
      "id": "menu_3_title",
      "label": "Titre menu 3",
      "default": "L\u00e9gal"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Menu 3"
    },
    {
      "type": "header",
      "content": "R\u00e9seaux sociaux"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok"
    },
    {
      "type": "header",
      "content": "Options"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Afficher ic\u00f4nes paiement",
      "default": true,
      "info": "Affiche automatiquement les moyens de paiement activ\u00e9s dans votre boutique"
    },
    {
      "type": "checkbox",
      "id": "show_powered_by",
      "label": "Afficher 'Powered by Shopify'",
      "default": false
    }
  ]
}
{% endschema %}
