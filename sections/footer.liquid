{% comment %}
  Footer Section "Lunetier" - Complete Rewrite
  Isolated CSS, Mobile-first, 2-column menu grid
{% endcomment %}

<style>
  /* === CONTAINER === */
  .lunetier-footer-v2 {
    background-color: #fafafa;
    color: #1a1a1a;
    padding: 4rem 0 2rem;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    border-top: 1px solid #e5e7eb;
    width: 100%;
  }

  .lunetier-footer-v2-inner {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* === TOP SECTION === */
  .lunetier-footer-v2-top {
    display: block;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid #e5e7eb;
  }

  /* Brand Column */
  .lunetier-footer-v2-brand {
    margin-bottom: 2.5rem;
  }

  .lunetier-footer-v2-logo {
    font-family: Georgia, serif;
    font-size: 1.5rem;
    font-weight: 400;
    margin: 0 0 1rem 0;
    letter-spacing: 0.02em;
    color: #000;
  }

  .lunetier-footer-v2-tagline {
    font-size: 0.875rem;
    line-height: 1.6;
    color: #6b7280;
    margin-bottom: 1.5rem;
    max-width: 20rem;
  }

  /* Newsletter */
  .lunetier-footer-v2-newsletter {
    margin-top: 1rem;
  }

  .lunetier-footer-v2-newsletter-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 0.75rem 0;
    color: #000;
  }

  .lunetier-footer-v2-newsletter-form {
    display: flex;
    max-width: 24rem;
    position: relative;
  }

  .lunetier-footer-v2-newsletter-input {
    flex: 1;
    padding: 0.875rem 1rem;
    background: #fff;
    border: 1px solid #d1d5db;
    color: #000;
    font-size: 0.875rem;
    font-family: inherit;
    transition: border-color 0.2s;
    margin: 0;
    outline: none;
  }

  .lunetier-footer-v2-newsletter-input:focus {
    border-color: #000;
  }

  .lunetier-footer-v2-newsletter-input::placeholder {
    color: #9ca3af;
  }

  .lunetier-footer-v2-newsletter-btn {
    padding: 0.875rem 1.5rem;
    background: #000;
    color: #fff;
    border: 1px solid #000;
    border-left: none;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: background-color 0.2s;
    white-space: nowrap;
    margin: 0;
  }

  .lunetier-footer-v2-newsletter-btn:hover {
    background: #1f2937;
  }

  /* Menu Grid - MOBILE FIRST */
  .lunetier-footer-v2-menus {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-top: 2.5rem;
  }

  /* 480px: 2 columns side by side */
  @media (min-width: 480px) {
    .lunetier-footer-v2-menus {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  /* 768px: 3 columns */
  @media (min-width: 768px) {
    .lunetier-footer-v2-menus {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 3rem;
    }
  }

  /* 1024px: Use flexbox instead, part of main layout */
  @media (min-width: 1024px) {
    .lunetier-footer-v2-top {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 4rem;
    }

    .lunetier-footer-v2-brand {
      margin-bottom: 0;
    }

    .lunetier-footer-v2-menus {
      display: contents;
    }
  }

  /* Menu Column */
  .lunetier-footer-v2-col {
    display: block;
  }

  .lunetier-footer-v2-col-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 1rem 0;
    color: #000;
  }

  .lunetier-footer-v2-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .lunetier-footer-v2-list li {
    margin-bottom: 0.625rem;
  }

  .lunetier-footer-v2-link {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s;
    display: inline-block;
  }

  .lunetier-footer-v2-link:hover {
    color: #000;
  }

  /* === BOTTOM BAR === */
  .lunetier-footer-v2-bottom {
    padding-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .lunetier-footer-v2-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  /* Bottom Left */
  .lunetier-footer-v2-bottom-left {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    align-items: center;
  }

  @media (min-width: 640px) {
    .lunetier-footer-v2-bottom-left {
      flex-direction: row;
      gap: 2rem;
    }
  }

  /* Bottom Right */
  .lunetier-footer-v2-bottom-right {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    align-items: center;
  }

  @media (min-width: 640px) {
    .lunetier-footer-v2-bottom-right {
      flex-direction: row;
      gap: 2rem;
    }
  }

  /* Social */
  .lunetier-footer-v2-social {
    display: flex;
    gap: 1.25rem;
    align-items: center;
  }

  .lunetier-footer-v2-social-link {
    color: #6b7280;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lunetier-footer-v2-social-link:hover {
    color: #000;
    transform: translateY(-2px);
  }

  .lunetier-footer-v2-social-link svg {
    width: 18px;
    height: 18px;
  }

  /* Payment */
  .lunetier-footer-v2-payment {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
  }

  .lunetier-footer-v2-payment .payment-icon {
    height: 22px;
    width: auto;
  }

  /* Copyright */
  .lunetier-footer-v2-copyright {
    text-align: center;
  }

  .lunetier-footer-v2-copyright p {
    font-size: 0.75rem;
    color: #9ca3af;
    margin: 0;
    line-height: 1.5;
  }

  .lunetier-footer-v2-copyright a {
    color: #6b7280;
    text-decoration: none;
    transition: color 0.2s;
  }

  .lunetier-footer-v2-copyright a:hover {
    color: #000;
  }

  /* Larger screens */
  @media (min-width: 768px) {
    .lunetier-footer-v2-logo {
      font-size: 1.75rem;
    }

    .lunetier-footer-v2-col-title {
      font-size: 0.8rem;
      margin-bottom: 1.25rem;
    }

    .lunetier-footer-v2-list li {
      margin-bottom: 0.75rem;
    }

    .lunetier-footer-v2-link {
      font-size: 0.9rem;
    }

    .lunetier-footer-v2-social-link svg {
      width: 20px;
      height: 20px;
    }

    .lunetier-footer-v2-payment .payment-icon {
      height: 24px;
    }
  }
</style>

<footer class="lunetier-footer-v2" role="contentinfo">
  <div class="lunetier-footer-v2-inner">
    
    <!-- TOP SECTION -->
    <div class="lunetier-footer-v2-top">
      
      <!-- BRAND + NEWSLETTER -->
      <div class="lunetier-footer-v2-brand">
        <h2 class="lunetier-footer-v2-logo">
          {% if section.settings.footer_logo != blank %}
            {{ section.settings.footer_logo }}
          {% else %}
            {{ shop.name }}
          {% endif %}
        </h2>
        
        <p class="lunetier-footer-v2-tagline">
          {{ section.settings.tagline | default: "French design, premium quality. Eyewear that enhances your style and protects your vision." }}
        </p>

        {%- if section.settings.show_newsletter -%}
          <div class="lunetier-footer-v2-newsletter">
            <h3 class="lunetier-footer-v2-newsletter-title">Newsletter</h3>
            <form action="/contact#newsletter" method="post" class="lunetier-footer-v2-newsletter-form">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input 
                type="email" 
                name="contact[email]" 
                placeholder="Your email" 
                class="lunetier-footer-v2-newsletter-input"
                required
              >
              <button type="submit" class="lunetier-footer-v2-newsletter-btn">OK</button>
            </form>
          </div>
        {%- endif -%}
      </div>

      <!-- MENU COLUMNS -->
      <div class="lunetier-footer-v2-menus">
        
        <!-- HELP -->
        <div class="lunetier-footer-v2-col">
          <h3 class="lunetier-footer-v2-col-title">{{ section.settings.menu_1_title | default: "Help" }}</h3>
          <ul class="lunetier-footer-v2-list">
            {%- for link in section.settings.menu_1.links -%}
              <li><a href="{{ link.url }}" class="lunetier-footer-v2-link">{{ link.title }}</a></li>
            {%- else -%}
              <li><a href="/pages/contact" class="lunetier-footer-v2-link">Contact</a></li>
              <li><a href="/pages/shipping" class="lunetier-footer-v2-link">Shipping</a></li>
              <li><a href="/pages/returns" class="lunetier-footer-v2-link">Returns</a></li>
              <li><a href="/pages/faq" class="lunetier-footer-v2-link">FAQ</a></li>
            {%- endfor -%}
          </ul>
        </div>

        <!-- SHOP -->
        <div class="lunetier-footer-v2-col">
          <h3 class="lunetier-footer-v2-col-title">{{ section.settings.menu_2_title | default: "Shop" }}</h3>
          <ul class="lunetier-footer-v2-list">
            {%- for link in section.settings.menu_2.links -%}
              <li><a href="{{ link.url }}" class="lunetier-footer-v2-link">{{ link.title }}</a></li>
            {%- else -%}
              <li><a href="/collections/all" class="lunetier-footer-v2-link">All Eyewear</a></li>
              <li><a href="/collections/sunglasses" class="lunetier-footer-v2-link">Sunglasses</a></li>
              <li><a href="/collections/optical" class="lunetier-footer-v2-link">Optical</a></li>
              <li><a href="/collections/new" class="lunetier-footer-v2-link">New Arrivals</a></li>
            {%- endfor -%}
          </ul>
        </div>

        <!-- LEGAL -->
        <div class="lunetier-footer-v2-col">
          <h3 class="lunetier-footer-v2-col-title">{{ section.settings.menu_3_title | default: "Legal" }}</h3>
          <ul class="lunetier-footer-v2-list">
            {%- for link in section.settings.menu_3.links -%}
              <li><a href="{{ link.url }}" class="lunetier-footer-v2-link">{{ link.title }}</a></li>
            {%- else -%}
              <li><a href="/policies/privacy-policy" class="lunetier-footer-v2-link">Privacy</a></li>
              <li><a href="/policies/terms-of-service" class="lunetier-footer-v2-link">Terms</a></li>
              <li><a href="/policies/refund-policy" class="lunetier-footer-v2-link">Refunds</a></li>
            {%- endfor -%}
          </ul>
        </div>
        
      </div>

    </div>

    <!-- BOTTOM BAR -->
    <div class="lunetier-footer-v2-bottom">
      
      <!-- LEFT -->
      <div class="lunetier-footer-v2-bottom-left">
        <div class="lunetier-footer-v2-social">
          {%- if section.settings.instagram_url != blank -%}
            <a href="{{ section.settings.instagram_url }}" class="lunetier-footer-v2-social-link" target="_blank" rel="noopener" aria-label="Instagram">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            </a>
          {%- endif -%}
          {%- if section.settings.facebook_url != blank -%}
            <a href="{{ section.settings.facebook_url }}" class="lunetier-footer-v2-social-link" target="_blank" rel="noopener" aria-label="Facebook">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </a>
          {%- endif -%}
          {%- if section.settings.tiktok_url != blank -%}
            <a href="{{ section.settings.tiktok_url }}" class="lunetier-footer-v2-social-link" target="_blank" rel="noopener" aria-label="TikTok">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/></svg>
            </a>
          {%- endif -%}
        </div>
        {% render 'language-selector' %}
      </div>

      <!-- RIGHT -->
      <div class="lunetier-footer-v2-bottom-right">
        {%- if section.settings.show_payment_icons -%}
          <div class="lunetier-footer-v2-payment">
            {%- for type in shop.enabled_payment_types -%}
              {{ type | payment_type_svg_tag: class: 'payment-icon' }}
            {%- endfor -%}
          </div>
        {%- endif -%}
        
        <div class="lunetier-footer-v2-copyright">
          <p>
            &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.
            {%- if section.settings.show_powered_by -%}
              | <a href="https://www.shopify.com" target="_blank">Shopify</a>
            {%- endif -%}
          </p>
        </div>
      </div>

    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer Lunetier",
  "settings": [
    {
      "type": "header",
      "content": "Brand"
    },
    {
      "type": "text",
      "id": "footer_logo",
      "label": "Text logo",
      "info": "Leave blank to use shop name"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "French design, premium quality. Eyewear that enhances your style and protects your vision."
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter",
      "default": true
    },
    {
      "type": "header",
      "content": "Menus"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Menu 1 title",
      "default": "Help"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Menu 2 title",
      "default": "Shop"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    },
    {
      "type": "text",
      "id": "menu_3_title",
      "label": "Menu 3 title",
      "default": "Legal"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Menu 3"
    },
    {
      "type": "header",
      "content": "Social media"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok"
    },
    {
      "type": "header",
      "content": "Options"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true,
      "info": "Automatically displays payment methods enabled in your shop"
    },
    {
      "type": "checkbox",
      "id": "show_powered_by",
      "label": "Show 'Powered by Shopify'",
      "default": false
    }
  ]
}
{% endschema %}