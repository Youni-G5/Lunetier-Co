{% comment %}
  Section Footer "Lunetier" - Design Premium Moderne
  4 colonnes desktop, newsletter, réseaux sociaux, paiements
{% endcomment %}

<style>
  .lunetier-footer {
    background-color: #0a0a0a;
    color: #ffffff;
    padding-top: 5rem;
    padding-bottom: 2rem;
    font-family: var(--font-sans);
  }

  .lunetier-footer-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* === GRID PRINCIPALE === */
  .lunetier-footer-main {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (min-width: 768px) {
    .lunetier-footer-main {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .lunetier-footer-main {
      grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 4rem;
    }
  }

  /* === COLONNE MARQUE === */
  .lunetier-footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .lunetier-footer-logo {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: 0.02em;
  }

  .lunetier-footer-tagline {
    font-size: 0.9rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
    max-width: 20rem;
  }

  /* Newsletter */
  .lunetier-newsletter {
    margin-top: 1rem;
  }

  .lunetier-newsletter-title {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  .lunetier-newsletter-form {
    display: flex;
    gap: 0;
    max-width: 24rem;
  }

  .lunetier-newsletter-input {
    flex: 1;
    padding: 0.875rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-right: none;
    color: #ffffff;
    font-size: 0.875rem;
    font-family: var(--font-sans);
    transition: all 0.2s;
  }

  .lunetier-newsletter-input:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .lunetier-newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .lunetier-newsletter-btn {
    padding: 0.875rem 1.5rem;
    background: #ffffff;
    color: #0a0a0a;
    border: 1px solid #ffffff;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .lunetier-newsletter-btn:hover {
    background: rgba(255, 255, 255, 0.9);
  }

  /* === COLONNES MENU === */
  .lunetier-footer-col {
    display: flex;
    flex-direction: column;
  }

  .lunetier-footer-col-title {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.25rem;
    color: #ffffff;
  }

  .lunetier-footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .lunetier-footer-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
    display: inline-block;
  }

  .lunetier-footer-link:hover {
    color: #ffffff;
  }

  /* === BOTTOM BAR === */
  .lunetier-footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-top: 2rem;
  }

  @media (min-width: 768px) {
    .lunetier-footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  /* Social Links */
  .lunetier-social-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .lunetier-social-link {
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lunetier-social-link:hover {
    color: #ffffff;
    transform: translateY(-2px);
  }

  .lunetier-social-link svg {
    width: 20px;
    height: 20px;
  }

  /* Payment Icons */
  .lunetier-payment-icons {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .lunetier-payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .lunetier-payment-icon:hover {
    opacity: 1;
  }

  /* Copyright */
  .lunetier-copyright {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: 2rem;
  }

  .lunetier-copyright p {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }

  .lunetier-copyright a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.2s;
  }

  .lunetier-copyright a:hover {
    color: #ffffff;
  }
</style>

<footer class="lunetier-footer" role="contentinfo">
  <div class="lunetier-footer-container">
    
    <!-- MAIN GRID -->
    <div class="lunetier-footer-main">
      
      <!-- COLONNE 1 : MARQUE + NEWSLETTER -->
      <div class="lunetier-footer-brand">
        <h2 class="lunetier-footer-logo">
          {% if section.settings.footer_logo != blank %}
            {{ section.settings.footer_logo }}
          {% else %}
            {{ shop.name }}
          {% endif %}
        </h2>
        
        <p class="lunetier-footer-tagline">
          {{ section.settings.tagline | default: "Design français, qualité premium. Lunettes qui subliment votre style et protègent votre vision." }}
        </p>

        <!-- NEWSLETTER -->
        {%- if section.settings.show_newsletter -%}
          <div class="lunetier-newsletter">
            <h3 class="lunetier-newsletter-title">Newsletter</h3>
            <form action="/contact#newsletter" method="post" class="lunetier-newsletter-form">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input 
                type="email" 
                name="contact[email]" 
                placeholder="Votre email" 
                class="lunetier-newsletter-input"
                required
              >
              <button type="submit" class="lunetier-newsletter-btn">
                OK
              </button>
            </form>
          </div>
        {%- endif -%}
      </div>

      <!-- COLONNE 2 : AIDE -->
      <div class="lunetier-footer-col">
        <h3 class="lunetier-footer-col-title">{{ section.settings.menu_1_title | default: "Aide" }}</h3>
        <ul class="lunetier-footer-list">
          {%- for link in section.settings.menu_1.links -%}
            <li><a href="{{ link.url }}" class="lunetier-footer-link">{{ link.title }}</a></li>
          {%- else -%}
            <li><a href="/pages/contact" class="lunetier-footer-link">Contact</a></li>
            <li><a href="/pages/livraison" class="lunetier-footer-link">Livraison</a></li>
            <li><a href="/pages/retours" class="lunetier-footer-link">Retours</a></li>
            <li><a href="/pages/faq" class="lunetier-footer-link">FAQ</a></li>
          {%- endfor -%}
        </ul>
      </div>

      <!-- COLONNE 3 : BOUTIQUE -->
      <div class="lunetier-footer-col">
        <h3 class="lunetier-footer-col-title">{{ section.settings.menu_2_title | default: "Boutique" }}</h3>
