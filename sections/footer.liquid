{% comment %}
  Section Footer "Lunetier" - Style Minimaliste & Clean
  Optimisé : CSS externe dans assets/footer.css
{% endcomment %}

<footer class="lunetier-footer" role="contentinfo">
  <div class="lunetier-footer-container">
    <div class="lunetier-footer-grid">
      
      <!-- COL 1 & 2 : MARQUE & DESCRIPTION -->
      <div class="lunetier-brand-col">
        <h3 class="lunetier-footer-title">
          {% if section.settings.brand_title != blank %}
            {{ section.settings.brand_title }}
          {% else %}
            {{ shop.name }}
          {% endif %}
        </h3>
        <p class="lunetier-footer-desc">
          {{ section.settings.brand_description | default: "Nous changeons la façon dont vous voyez le monde, une paire à la fois. Design français, qualité sans compromis." }}
        </p>
      </div>

      <!-- COL 3 : MENU AIDE -->
      <div class="lunetier-footer-menu-col">
        <h4 class="lunetier-menu-title">{{ section.settings.menu_1_title | default: "Aide" }}</h4>
        <ul class="lunetier-footer-list">
          {%- for link in section.settings.menu_1.links -%}
            <li><a href="{{ link.url }}" class="lunetier-footer-link">{{ link.title }}</a></li>
          {%- else -%}
            <li><a href="{{ routes.root_url }}pages/livraison" class="lunetier-footer-link">Livraison & Retours</a></li>
            <li><a href="{{ routes.root_url }}pages/faq" class="lunetier-footer-link">FAQ</a></li>
            <li><a href="{{ routes.root_url }}pages/guide-tailles" class="lunetier-footer-link">Guide des tailles</a></li>
          {%- endfor -%}
        </ul>
      </div>

      <!-- COL 4 : MENU SOCIAL / AUTRE -->
      <div class="lunetier-footer-menu-col">
        <h4 class="lunetier-menu-title">{{ section.settings.menu_2_title | default: "Social" }}</h4>
        <ul class="lunetier-footer-list">
          {%- for link in section.settings.menu_2.links -%}
            <li><a href="{{ link.url }}" class="lunetier-footer-link" {% if link.url contains 'http' %}target="_blank" rel="noopener noreferrer"{% endif %}>{{ link.title }}</a></li>
          {%- else -%}
            <li><a href="https://instagram.com" class="lunetier-footer-link" target="_blank" rel="noopener noreferrer">Instagram</a></li>
            <li><a href="https://facebook.com" class="lunetier-footer-link" target="_blank" rel="noopener noreferrer">Facebook</a></li>
            <li><a href="https://pinterest.com" class="lunetier-footer-link" target="_blank" rel="noopener noreferrer">Pinterest</a></li>
          {%- endfor -%}
        </ul>
      </div>

    </div>

    <!-- COPYRIGHT BAR -->
    <div class="lunetier-copyright">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. Tous droits réservés.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer Lunetier",
  "settings": [
    {
      "type": "header",
      "content": "Identité de marque"
    },
    {
      "type": "text",
      "id": "brand_title",
      "label": "Titre Marque",
      "info": "Laissez vide pour utiliser le nom de la boutique"
    },
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Description",
      "default": "Nous changeons la façon dont vous voyez le monde, une paire à la fois. Design français, qualité sans compromis."
    },
    {
      "type": "header",
      "content": "Menu Colonne 1"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Titre du menu",
      "default": "Aide"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "Menu Colonne 2"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Titre du menu",
      "default": "Social"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu",
      "info": "Créez un menu avec vos liens sociaux ou utilisez ce bloc pour d'autres liens."
    }
  ]
}
{% endschema %}
