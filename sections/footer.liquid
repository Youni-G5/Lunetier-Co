    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Afficher newsletter",
      "default": true
    },
    {
      "type": "header",
      "content": "Menus"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Titre menu 1",
      "default": "Aide"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Titre menu 2",
      "default": "Boutique"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    },
    {
      "type": "text",
      "id": "menu_3_title",
      "label": "Titre menu 3",
      "default": "L\u00e9gal"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Menu 3"
    },
