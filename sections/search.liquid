{% comment %}
  Section Recherche "Lunetier" - Version Premium & Mobile First
  Optimisé : CSS isolé avec préfixe lunetier-search-*
{% endcomment %}

<style>
  /* =================================================================
     SEARCH SECTION - LUNETIER
     Classes scope : .lunetier-search-*
     ================================================================= */

  /* --- SECTION WRAPPER --- */
  .lunetier-search-section {
    background-color: var(--color-white);
    color: var(--color-black);
    padding-top: 6rem;
    padding-bottom: 4rem;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .lunetier-search-section {
      padding-top: 8rem;
      padding-bottom: 6rem;
      min-height: 85vh;
    }
  }

  .lunetier-search-section .lunetier-search-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.25rem;
    width: 100%;
  }

  /* --- HEADER & INPUT --- */
  .lunetier-search-section .lunetier-search-header {
    max-width: 48rem;
    margin: 0 auto;
    text-align: center;
    position: relative;
  }
  
  /* Empty state (no search performed) */
  .lunetier-search-section .lunetier-search-header.is-empty {
    padding: 3rem 0;
  }

  @media (min-width: 1024px) {
    .lunetier-search-section .lunetier-search-header.is-empty {
      padding: 4rem 0;
    }
  }

  .lunetier-search-section .lunetier-search-title {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    font-weight: 400;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }
  
  @media (min-width: 768px) {
    .lunetier-search-section .lunetier-search-title { 
      font-size: 3.5rem; 
    }
  }

  @media (min-width: 1024px) {
    .lunetier-search-section .lunetier-search-title { 
      font-size: 4.5rem;
      margin-bottom: 1.5rem;
    }
  }

  .lunetier-search-section .lunetier-search-subtitle {
    font-family: var(--font-sans);
    font-size: 1rem;
    color: var(--color-gray-500);
    margin-bottom: 3rem;
    font-weight: 400;
    line-height: 1.6;
  }

  @media (min-width: 768px) {
    .lunetier-search-section .lunetier-search-subtitle {
      font-size: 1.125rem;
    }
  }

  @media (min-width: 1024px) {
    .lunetier-search-section .lunetier-search-subtitle {
      font-size: 1.25rem;
      margin-bottom: 4rem;
    }
  }

  .lunetier-search-section .lunetier-search-wrapper {
    position: relative;
    width: 100%;
    max-width: 42rem;
    margin: 0 auto;
  }

  .lunetier-search-section .lunetier-search-input {
    width: 100%;
    border: none;
    border-bottom: 2px solid var(--color-gray-200);
    padding: 1rem 3rem 1rem 1rem;
    font-family: var(--font-serif);
    font-size: 1.125rem;
    color: var(--color-black);
    background: transparent;
    border-radius: 0;
    transition: border-color var(--transition-base);
    -webkit-appearance: none;
  }

  @media (min-width: 768px) {
    .lunetier-search-section .lunetier-search-input {
      font-size: 1.5rem;
      text-align: center;
      padding: 1.25rem 3.5rem;
      border-bottom-width: 2px;
    }
  }

  .lunetier-search-section .lunetier-search-input:focus {
    outline: none;
    border-bottom-color: var(--color-black);
  }
  
  .lunetier-search-section .lunetier-search-input::placeholder {
    color: var(--color-gray-400);
    opacity: 1;
  }

  /* --- ICONS --- */
  .lunetier-search-section .lunetier-search-icon-submit {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 0.625rem;
    color: var(--color-black);
    cursor: pointer;
    z-index: 2;
    transition: all var(--transition-fast);
  }

  .lunetier-search-section .lunetier-search-icon-submit:hover {
    opacity: 0.6;
    transform: translateY(-50%) scale(1.1);
  }

  .lunetier-search-section .lunetier-search-clear {
    position: absolute;
    right: 3rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--color-gray-400);
    cursor: pointer;
    display: none;
    padding: 0.625rem;
    transition: all var(--transition-fast);
  }
  
  .lunetier-search-section .lunetier-search-input:not(:placeholder-shown) ~ .lunetier-search-clear {
    display: block;
  }

  .lunetier-search-section .lunetier-search-clear:hover {
    opacity: 0.6;
    transform: translateY(-50%) scale(1.1);
  }

  /* --- QUICK LINKS --- */
  .lunetier-search-section .lunetier-search-quick-links {
    margin-top: 2.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  @media (min-width: 1024px) {
    .lunetier-search-section .lunetier-search-quick-links {
      margin-top: 3.5rem;
      gap: 1.25rem;
    }
  }

  .lunetier-search-section .lunetier-search-quick-label {
    font-family: var(--font-sans);
    font-size: 0.8125rem;
    color: var(--color-gray-400);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  @media (min-width: 768px) {
    .lunetier-search-section .lunetier-search-quick-label {
      font-size: 0.875rem;
    }
  }

  .lunetier-search-section .lunetier-search-quick-link {
    text-decoration: none;
    color: var(--color-black);
    border: 1px solid var(--color-gray-200);
    padding: 0.625rem 1.25rem;
    border-radius: 99px;
    transition: all var(--transition-base);
    font-family: var(--font-sans);
    font-size: 0.875rem;
    font-weight: 500;
    display: inline-block;
  }

  @media (min-width: 768px) {
    .lunetier-search-section .lunetier-search-quick-link {
      font-size: 0.9375rem;
      padding: 0.75rem 1.5rem;
    }
  }
  
  .lunetier-search-section .lunetier-search-quick-link:hover {
    border-color: var(--color-black);
    background-color: var(--color-black);
    color: var(--color-white);
    transform: translateY(-2px);
  }

  /* --- POPULAR SEARCHES --- */
  .lunetier-search-section .lunetier-search-popular {
    margin-top: 4rem;
    text-align: center;
  }

  @media (min-width: 1024px) {
    .lunetier-search-section .lunetier-search-popular {
      margin-top: 5rem;
    }
  }

  .lunetier-search-section .lunetier-search-popular-title {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-400);
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .lunetier-search-section .lunetier-search-popular-list {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.75rem;
    max-width: 36rem;
    margin: 0 auto;
  }

  .lunetier-search-section .lunetier-search-popular-item {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--color-gray-600);
    text-decoration: none;
    transition: color var(--transition-fast);
    cursor: pointer;
  }

  .lunetier-search-section .lunetier-search-popular-item:hover {
    color: var(--color-black);
    text-decoration: underline;
  }

  .lunetier-search-section .lunetier-search-popular-separator {
    color: var(--color-gray-300);
  }

  /* --- RESULTS INFO --- */
  .lunetier-search-section .lunetier-search-results-count {
    text-align: center;
    color: var(--color-gray-500);
    margin-bottom: 3rem;
    margin-top: 2rem;
    font-family: var(--font-sans);
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
  }

  /* --- ARTICLE CARD --- */
  .lunetier-search-section .lunetier-search-article-card {
    background: var(--color-gray-50);
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-decoration: none;
    color: inherit;
    border: 1px solid transparent;
    transition: border-color var(--transition-fast);
  }
  
  .lunetier-search-section .lunetier-search-article-card:hover { 
    border-color: var(--color-gray-200); 
  }

  .lunetier-search-section .lunetier-search-article-tag {
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-gray-400);
    margin-bottom: 0.75rem;
    letter-spacing: 0.05em;
    font-family: var(--font-sans);
  }

  .lunetier-search-section .lunetier-search-article-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    line-height: 1.2;
    color: var(--color-black);
  }
  
  .lunetier-search-section .lunetier-search-article-link {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: underline;
    margin-top: auto;
    font-family: var(--font-sans);
  }

  /* --- EMPTY STATE --- */
  .lunetier-search-section .lunetier-search-no-results {
    text-align: center;
    padding: 4rem 0;
    max-width: 32rem;
    margin: 0 auto;
  }
  
  .lunetier-search-section .lunetier-search-no-results p {
    color: var(--color-gray-500);
    margin-bottom: 2.5rem;
    font-family: var(--font-sans);
    font-size: 1rem;
    line-height: 1.6;
  }

  /* --- LOAD MORE --- */
  .lunetier-search-section .lunetier-search-load-more {
    margin-top: 4rem;
    text-align: center;
  }

  .lunetier-search-section .lunetier-search-load-more-btn {
    display: inline-block;
    border-bottom: 1px solid var(--color-black);
    padding-bottom: 2px;
    text-decoration: none;
    color: var(--color-black);
    text-transform: uppercase;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    font-family: var(--font-sans);
    transition: opacity var(--transition-fast);
  }

  .lunetier-search-section .lunetier-search-load-more-btn:hover {
    opacity: 0.6;
  }
</style>

<div class="lunetier-search-section">
  <div class="lunetier-search-container">
    
    <div class="lunetier-search-header {% unless search.performed %}is-empty{% endunless %}">
      
      {%- unless search.performed -%}
        <h1 class="lunetier-search-title">Que recherchez-vous ?</h1>
        <p class="lunetier-search-subtitle">Lunettes de vue, solaires, accessoires... Trouvez la paire parfaite qui vous ressemble</p>
      {%- endunless -%}
      
      <form action="{{ routes.search_url }}" method="get" role="search" class="lunetier-search-form">
        <div class="lunetier-search-wrapper">
          <input
            type="text"
            name="q"
            value="{{ search.terms | escape }}"
            placeholder="Rechercher un produit, une marque..."
            class="lunetier-search-input"
            id="SearchInput"
            autocomplete="off"
            autofocus
          >
          <input type="hidden" name="type" value="product,article,page">
          
          <button type="button" class="lunetier-search-clear" onclick="document.getElementById('SearchInput').value = ''; document.getElementById('SearchInput').focus();" aria-label="Effacer">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" aria-hidden="true">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>

          <button type="submit" class="lunetier-search-icon-submit" aria-label="Rechercher">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </button>
        </div>
      </form>

      {%- unless search.performed -%}
        <div class="lunetier-search-quick-links">
          <span class="lunetier-search-quick-label">Catégories :</span>
          <a href="{{ routes.all_products_collection_url }}" class="lunetier-search-quick-link">Solaire</a>
          <a href="{{ routes.all_products_collection_url }}" class="lunetier-search-quick-link">Optique</a>
          <a href="{{ routes.all_products_collection_url }}" class="lunetier-search-quick-link">Nouveautés</a>
        </div>

        <div class="lunetier-search-popular">
          <div class="lunetier-search-popular-title">Recherches populaires</div>
          <div class="lunetier-search-popular-list">
            <a href="{{ routes.search_url }}?q=aviateur&type=product" class="lunetier-search-popular-item">Aviateur</a>
            <span class="lunetier-search-popular-separator">•</span>
            <a href="{{ routes.search_url }}?q=ray-ban&type=product" class="lunetier-search-popular-item">Ray-Ban</a>
            <span class="lunetier-search-popular-separator">•</span>
            <a href="{{ routes.search_url }}?q=cat-eye&type=product" class="lunetier-search-popular-item">Cat Eye</a>
            <span class="lunetier-search-popular-separator">•</span>
            <a href="{{ routes.search_url }}?q=vintage&type=product" class="lunetier-search-popular-item">Vintage</a>
            <span class="lunetier-search-popular-separator">•</span>
            <a href="{{ routes.search_url }}?q=sport&type=product" class="lunetier-search-popular-item">Sport</a>
          </div>
        </div>
      {%- endunless -%}
    </div>

    {%- if search.performed -%}
      
      {%- if search.results_count > 0 -%}
        <div class="lunetier-search-results-count">
          {{ search.results_count }} résultat{% if search.results_count > 1 %}s{% endif %} pour "{{ search.terms }}"
        </div>

        {% paginate search.results by 12 %}
          <div class="lunetier-products-grid">
            {%- for item in search.results -%}
              
              {%- case item.object_type -%}
                {%- when 'product' -%}
                  {% render 'product-card',
                    product: item,
                    show_second_image: true,
                    show_badge: true,
                    show_vendor: true,
                    image_loading: 'lazy'
                  %}

                {%- when 'article' -%}
                  <a href="{{ item.url }}" class="lunetier-search-article-card">
                    <div class="lunetier-search-article-tag">Journal</div>
                    <h3 class="lunetier-search-article-title">{{ item.title }}</h3>
                    <div class="lunetier-search-article-link">Lire l'article</div>
                  </a>

                {%- when 'page' -%}
                  <a href="{{ item.url }}" class="lunetier-search-article-card">
                    <div class="lunetier-search-article-tag">Information</div>
                    <h3 class="lunetier-search-article-title">{{ item.title }}</h3>
                    <div class="lunetier-search-article-link">Voir la page</div>
                  </a>

              {%- endcase -%}

            {%- endfor -%}
          </div>

          {%- if paginate.pages > 1 -%}
            <div class="lunetier-search-load-more">
               {%- if paginate.next -%}
                <a href="{{ paginate.next.url }}" class="lunetier-search-load-more-btn">
                  Charger plus
                </a>
               {%- endif -%}
            </div>
          {%- endif -%}

        {% endpaginate %}

      {%- else -%}
        <div class="lunetier-search-no-results">
          <p>Aucun résultat pour "{{ search.terms }}". Essayez avec d'autres termes ou parcourez nos collections.</p>
          <div class="lunetier-search-quick-links">
             <a href="{{ routes.all_products_collection_url }}" class="lunetier-search-quick-link">Voir toute la collection</a>
          </div>
        </div>
      {%- endif -%}

    {%- endif -%}

  </div>
</div>

{% schema %}
{
  "name": "Page Recherche",
  "settings": []
}
{% endschema %}