<script src="https://cdn.jsdelivr.net/npm/@mediapipe/face_mesh/face_mesh.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.js" crossorigin="anonymous"></script>

<script>
(function() {
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initVTO);
  } else {
    initVTO();
  }

  function initVTO() {
    const modal = document.getElementById('vto-modal');
    const closeBtn = document.getElementById('vto-close');
    const video = document.getElementById('vto-video');
    const canvas = document.getElementById('vto-canvas');
    const ctx = canvas.getContext('2d', { alpha: true, desynchronized: true });
    const scaleInput = document.getElementById('vto-scale');
    const scaleValue = document.getElementById('vto-scale-value');
    const statusDot = document.getElementById('vto-status-dot');
    const statusText = document.getElementById('vto-status-text');
    const loadingEl = document.getElementById('vto-loading');
    const errorMsg = document.getElementById('vto-error-msg');
    const fpsEl = document.getElementById('vto-fps');
    
    if (!modal || !video || !canvas) return;

    let faceMesh = null;
    let camera = null;
    let glassesImg = null;
    let scaleMultiplier = 1.0;
    let faceDetected = false;
    let isRunning = false;
    
    // Smoothing pour mouvement fluide
    let smoothedLandmarks = null;
    const smoothingFactor = 0.5; // 0 = pas de lissage, 1 = lissage max

    // FPS counter
    let lastFrameTime = Date.now();
    let frameCount = 0;
    let fps = 0;

    // Pr√©charger l'image des lunettes
    {% if product.featured_media %}
    glassesImg = new Image();
    glassesImg.crossOrigin = 'anonymous';
    glassesImg.src = '{{ product.featured_media | image_url: width: 800 }}';
    glassesImg.onload = () => console.log('‚úÖ Glasses image loaded');
    {% endif %}

    // --- OUVERTURE / FERMETURE ---
    
    window.openVirtualTryOn = async function() {
      console.log('‚úÖ Opening Virtual Try-On...');
      modal.classList.add('is-active');
      document.body.style.overflow = 'hidden';
      isRunning = true;
      await startVTO();
    };

    window.vtoStartCamera = async function() {
      isRunning = true;
      await startVTO();
    };

    if (closeBtn) {
      closeBtn.addEventListener('click', () => {
        stopVTO();
      });
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('is-active')) {
        stopVTO();
      }
    });

    // --- SCALE CONTROL ---
    if (scaleInput) {
      scaleInput.addEventListener('input', (e) => {
        const value = parseFloat(e.target.value);
        scaleMultiplier = value / 100;
        if (scaleValue) scaleValue.textContent = value + '%';
      });
    }

    // --- MEDIAPIPE FACE MESH ---
    
    async function startVTO() {
      try {
        loadingEl.style.display = 'block';
        errorMsg.style.display = 'none';
        smoothedLandmarks = null; // Reset smoothing
        
        // Init MediaPipe Face Mesh
        if (!faceMesh) {
          faceMesh = new FaceMesh({
            locateFile: (file) => {
              return `https://cdn.jsdelivr.net/npm/@mediapipe/face_mesh/${file}`;
            }
          });

          faceMesh.setOptions({
            maxNumFaces: 1,
            refineLandmarks: true,
            minDetectionConfidence: 0.7,  // Augment√© pour plus de stabilit√©
            minTrackingConfidence: 0.7    // Augment√© pour meilleur tracking
          });

          faceMesh.onResults(onFaceMeshResults);
        }

        // Init Camera avec settings optimis√©s
        if (!camera) {
          camera = new Camera(video, {
            onFrame: async () => {
              if (isRunning) {
                await faceMesh.send({ image: video });
              }
            },
            width: 1280,
            height: 720,
            fps: 60  // Force 60 FPS
          });
        }

        await camera.start();
        loadingEl.style.display = 'none';
        console.log('‚úÖ VTO started at 60 FPS');

      } catch (err) {
        console.error('‚ùå VTO error:', err);
        loadingEl.style.display = 'none';
        errorMsg.style.display = 'block';
      }
    }

    function stopVTO() {
      modal.classList.remove('is-active');
      document.body.style.overflow = '';
      isRunning = false;
      
      if (camera) {
        camera.stop();
      }
      
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      faceDetected = false;
      smoothedLandmarks = null;
      updateStatus(false);
      console.log('üõë VTO stopped');
    }

    // --- SMOOTHING FUNCTION ---
    
    function smoothLandmarks(newLandmarks) {
      if (!smoothedLandmarks) {
        smoothedLandmarks = newLandmarks;
        return newLandmarks;
      }

      // Interpolation lin√©aire entre anciens et nouveaux landmarks
      const smoothed = newLandmarks.map((landmark, i) => ({
        x: smoothedLandmarks[i].x + (landmark.x - smoothedLandmarks[i].x) * smoothingFactor,
        y: smoothedLandmarks[i].y + (landmark.y - smoothedLandmarks[i].y) * smoothingFactor,
        z: smoothedLandmarks[i].z + (landmark.z - smoothedLandmarks[i].z) * smoothingFactor
      }));

      smoothedLandmarks = smoothed;
      return smoothed;
    }

    // --- FACE MESH RESULTS ---
    
    function onFaceMeshResults(results) {
      // FPS counter
      frameCount++;
      const now = Date.now();
      if (now - lastFrameTime >= 1000) {
        fps = frameCount;
        frameCount = 0;
        lastFrameTime = now;
        if (fpsEl) fpsEl.textContent = `FPS: ${fps}`;
      }

      // Resize canvas to match video
      if (canvas.width !== results.image.width || canvas.height !== results.image.height) {
        canvas.width = results.image.width;
        canvas.height = results.image.height;
      }

      // Clear canvas
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      if (results.multiFaceLandmarks && results.multiFaceLandmarks.length > 0) {
        const rawLandmarks = results.multiFaceLandmarks[0];
        
        // Apply smoothing
        const landmarks = smoothLandmarks(rawLandmarks);
        
        if (!faceDetected) {
          faceDetected = true;
          updateStatus(true);
        }

        // Draw glasses
        drawGlasses(landmarks, canvas.width, canvas.height);
      } else {
        if (faceDetected) {
          faceDetected = false;
          updateStatus(false);
        }
      }
    }

    // --- DRAW GLASSES ---
    
    function drawGlasses(landmarks, width, height) {
      if (!glassesImg || !glassesImg.complete) return;

      // Key landmarks
      const leftEye = landmarks[33];
      const rightEye = landmarks[263];

      // Calculate eye distance
      const eyeDistance = Math.sqrt(
        Math.pow((rightEye.x - leftEye.x) * width, 2) +
        Math.pow((rightEye.y - leftEye.y) * height, 2)
      );

      const centerX = ((leftEye.x + rightEye.x) / 2) * width;
      const centerY = ((leftEye.y + rightEye.y) / 2) * height;

      // Calculate rotation angle
      const angle = Math.atan2(
        (rightEye.y - leftEye.y) * height,
        (rightEye.x - leftEye.x) * width
      );

      // Calculate glasses dimensions
      const glassesWidth = eyeDistance * 2.5 * scaleMultiplier;
      const glassesHeight = (glassesImg.height / glassesImg.width) * glassesWidth;

      // Y offset (au-dessus des yeux)
      const yOffset = eyeDistance * 0.15;

      // Draw with smooth rendering
      ctx.save();
      ctx.imageSmoothingEnabled = true;
      ctx.imageSmoothingQuality = 'high';
      ctx.translate(centerX, centerY - yOffset);
      ctx.rotate(angle);
      ctx.drawImage(
        glassesImg,
        -glassesWidth / 2,
        -glassesHeight / 2,
        glassesWidth,
        glassesHeight
      );
      ctx.restore();
    }

    // --- UPDATE STATUS ---
    
    function updateStatus(detected) {
      if (detected) {
        statusDot.classList.remove('inactive');
        statusText.textContent = 'Visage d√©tect√©';
      } else {
        statusDot.classList.add('inactive');
        statusText.textContent = 'Recherche de visage...';
      }
    }

    console.log('‚úÖ VTO initialized with MediaPipe Face Mesh (Optimized)');
  }
})();
</script>

