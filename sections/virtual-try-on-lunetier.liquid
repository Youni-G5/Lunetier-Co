<script>
(function() {
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initVTO);
  } else {
    initVTO();
  }

  function initVTO() {
    const modal = document.getElementById('vto-modal');
    const closeBtn = document.getElementById('vto-close');
    const video = document.getElementById('vto-video');
    const canvas = document.getElementById('vto-canvas');
    const ctx = canvas.getContext('2d', { alpha: true, desynchronized: true, willReadFrequently: false });
    const scaleInput = document.getElementById('vto-scale');
    const scaleValue = document.getElementById('vto-scale-value');
    const yOffsetInput = document.getElementById('vto-yoffset');
    const yOffsetValue = document.getElementById('vto-yoffset-value');
    const statusDot = document.getElementById('vto-status-dot');
    const statusText = document.getElementById('vto-status-text');
    const loadingEl = document.getElementById('vto-loading');
    const errorMsg = document.getElementById('vto-error-msg');
    
    if (!modal || !video || !canvas) return;

    // Mobile detection
    const isMobile = /Android|iPhone|iPad|iPod|Opera Mini|IEMobile|WPDesktop/i.test(navigator.userAgent) || window.innerWidth < 768;
    
    // Adaptive config based on device
    const config = {
      width: isMobile ? 640 : 1280,
      height: isMobile ? 480 : 720,
      fps: isMobile ? 30 : 60,
      minDetectionConfidence: isMobile ? 0.6 : 0.7,
      minTrackingConfidence: isMobile ? 0.6 : 0.7,
      refineLandmarks: !isMobile,
      smoothingFactor: isMobile ? 0.6 : 0.5
    };

    let faceMesh = null;
    let camera = null;
    let glassesImg = null;
    let glassesAspectRatio = 1;
    let scaleMultiplier = 1.0;
    let yOffsetAdjust = 0;
    let faceDetected = false;
    let isRunning = false;
    let smoothedLandmarks = null;

    // Preload glasses image
    {% if product.featured_media %}
    glassesImg = new Image();
    glassesImg.crossOrigin = 'anonymous';
    glassesImg.src = '{{ product.featured_media | image_url: width: 800 }}';
    glassesImg.onload = () => {
      glassesAspectRatio = glassesImg.naturalWidth / glassesImg.naturalHeight;
      console.log(`âœ… Glasses loaded: ${glassesImg.naturalWidth}x${glassesImg.naturalHeight} (ratio: ${glassesAspectRatio.toFixed(2)})`);
    };
    {% endif %}

    // --- OPEN / CLOSE ---
    
    window.openVirtualTryOn = async function() {
      console.log(`âœ… Opening VTO (${isMobile ? 'Mobile' : 'Desktop'} mode)...`);
      modal.classList.add('is-active');
      document.body.style.overflow = 'hidden';
      isRunning = true;
      await startVTO();
    };

    window.vtoStartCamera = async function() {
      isRunning = true;
      await startVTO();
    };

    if (closeBtn) {
      closeBtn.addEventListener('click', () => {
        stopVTO();
      });
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('is-active')) {
        stopVTO();
      }
    });

    // --- CONTROLS ---
    
    if (scaleInput) {
      scaleInput.addEventListener('input', (e) => {
        const value = parseFloat(e.target.value);
        scaleMultiplier = value / 100;
        if (scaleValue) scaleValue.textContent = value + '%';
      });
    }

    if (yOffsetInput) {
      yOffsetInput.addEventListener('input', (e) => {
        yOffsetAdjust = parseFloat(e.target.value);
        if (yOffsetValue) yOffsetValue.textContent = yOffsetAdjust;
      });
    }

    // --- MEDIAPIPE FACE MESH ---
    
    async function startVTO() {
      try {
        loadingEl.style.display = 'block';
        errorMsg.style.display = 'none';
        smoothedLandmarks = null;
        
        if (!faceMesh) {
          faceMesh = new FaceMesh({
            locateFile: (file) => {
              return `https://cdn.jsdelivr.net/npm/@mediapipe/face_mesh/${file}`;
            }
          });

          faceMesh.setOptions({
            maxNumFaces: 1,
            refineLandmarks: config.refineLandmarks,
            minDetectionConfidence: config.minDetectionConfidence,
            minTrackingConfidence: config.minTrackingConfidence
          });

          faceMesh.onResults(onFaceMeshResults);
        }

        if (!camera) {
          camera = new Camera(video, {
            onFrame: async () => {
              if (isRunning) {
                await faceMesh.send({ image: video });
              }
            },
            width: config.width,
            height: config.height,
            fps: config.fps
          });
        }

        await camera.start();
        loadingEl.style.display = 'none';
        console.log(`âœ… VTO started: ${config.width}x${config.height} @ ${config.fps} FPS`);

      } catch (err) {
        console.error('âŒ VTO error:', err);
        loadingEl.style.display = 'none';
        errorMsg.style.display = 'block';
      }
    }

    function stopVTO() {
      modal.classList.remove('is-active');
      document.body.style.overflow = '';
      isRunning = false;
      
      if (camera) {
        camera.stop();
      }
      
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      faceDetected = false;
      smoothedLandmarks = null;
      updateStatus(false);
      console.log('ðŸ›‘ VTO stopped');
    }

    // --- SMOOTHING ---
    
    function smoothLandmarks(newLandmarks) {
      if (!smoothedLandmarks) {
        smoothedLandmarks = newLandmarks;
        return newLandmarks;
      }

      const smoothed = newLandmarks.map((landmark, i) => ({
        x: smoothedLandmarks[i].x + (landmark.x - smoothedLandmarks[i].x) * config.smoothingFactor,
        y: smoothedLandmarks[i].y + (landmark.y - smoothedLandmarks[i].y) * config.smoothingFactor,
        z: smoothedLandmarks[i].z + (landmark.z - smoothedLandmarks[i].z) * config.smoothingFactor
      }));

      smoothedLandmarks = smoothed;
      return smoothed;
    }

    // --- FACE MESH RESULTS ---
    
    function onFaceMeshResults(results) {
      if (canvas.width !== results.image.width || canvas.height !== results.image.height) {
        canvas.width = results.image.width;
        canvas.height = results.image.height;
      }

      ctx.clearRect(0, 0, canvas.width, canvas.height);

      if (results.multiFaceLandmarks && results.multiFaceLandmarks.length > 0) {
        const rawLandmarks = results.multiFaceLandmarks[0];
        const landmarks = smoothLandmarks(rawLandmarks);
        
        if (!faceDetected) {
          faceDetected = true;
          updateStatus(true);
        }

        drawGlasses(landmarks, canvas.width, canvas.height);
      } else {
        if (faceDetected) {
          faceDetected = false;
          updateStatus(false);
        }
      }
    }

    // --- DRAW GLASSES ---
    
    function drawGlasses(landmarks, width, height) {
      if (!glassesImg || !glassesImg.complete) return;

      const leftEyeOuter = landmarks[33];
      const rightEyeOuter = landmarks[263];
      const noseBridge = landmarks[168];

      const eyeDistance = Math.sqrt(
        Math.pow((rightEyeOuter.x - leftEyeOuter.x) * width, 2) +
        Math.pow((rightEyeOuter.y - leftEyeOuter.y) * height, 2)
      );

      const centerX = ((leftEyeOuter.x + rightEyeOuter.x) / 2) * width;
      const eyeCenterY = ((leftEyeOuter.y + rightEyeOuter.y) / 2) * height;
      const noseBridgeY = noseBridge.y * height;
      const centerY = (eyeCenterY + noseBridgeY) / 2;

      const angle = Math.atan2(
        (rightEyeOuter.y - leftEyeOuter.y) * height,
        (rightEyeOuter.x - leftEyeOuter.x) * width
      );

      const glassesWidth = eyeDistance * 2.5 * scaleMultiplier;
      const glassesHeight = glassesWidth / glassesAspectRatio;

      const baseYOffset = eyeDistance * 0.05;
      const manualYOffset = yOffsetAdjust * (eyeDistance * 0.01);
      const finalYOffset = baseYOffset + manualYOffset;

      ctx.save();
      ctx.imageSmoothingEnabled = true;
      ctx.imageSmoothingQuality = isMobile ? 'medium' : 'high';
      ctx.translate(centerX, centerY - finalYOffset);
      ctx.rotate(angle);
      ctx.drawImage(
        glassesImg,
        -glassesWidth / 2,
        -glassesHeight / 2,
        glassesWidth,
        glassesHeight
      );
      ctx.restore();
    }

    // --- UPDATE STATUS ---
    
    function updateStatus(detected) {
      if (detected) {
        statusDot.classList.remove('inactive');
        statusText.textContent = 'Face detected';
      } else {
        statusDot.classList.add('inactive');
        statusText.textContent = 'Searching for face...';
      }
    }

    console.log(`âœ… VTO initialized (${isMobile ? 'Mobile' : 'Desktop'})`);
  }
})();
</script>

