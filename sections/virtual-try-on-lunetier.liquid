    z-index: 9999;
    display: flex;
    flex-direction: column;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    font-family: var(--vto-font);
    overflow: hidden;
  }

  .vto-modal.is-active {
    opacity: 1;
    pointer-events: auto;
  }

  /* Header */
