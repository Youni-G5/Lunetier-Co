  .vto-loading p {
    font-size: 0.9rem;
    opacity: 0.9;
    font-weight: 500;
  }

  /* Error */
  .vto-error {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    display: none;
