    },
    {
      "type": "textarea",
      "id": "text_1",
      "label": "Texte Bloc 1"
    },
    {
      "type": "header",
      "content": "Bloc Histoire 2"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
