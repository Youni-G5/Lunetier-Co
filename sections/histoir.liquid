  "name": "Histoire",
  "settings": [
    {
      "type": "header",
      "content": "Introduction"
    },
    {
      "type": "text",
      "id": "pretitle",
      "label": "Sous-titre (ex: Depuis 2024)",
      "default": "Depuis 2024"
    },
    {
