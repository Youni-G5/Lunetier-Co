{% comment %}
  Section Panier "Lunetier" - Design Clean
  Optimisé : CSS externe dans assets/cart.css
{% endcomment %}

{{ 'cart.css' | asset_url | stylesheet_tag }}

<div class="lunetier-cart-section">
  <div class="lunetier-cart-container">
    
    <h1 class="lunetier-cart-title">Panier</h1>

    {%- if cart.item_count > 0 -%}
      
      <form action="{{ routes.cart_url }}" method="post" class="lunetier-cart-form">
        
        <div class="lunetier-cart-grid">
          
          <!-- COLONNE GAUCHE : ITEMS -->
          <div class="lunetier-cart-items">
            {%- for item in cart.items -%}
              <div class="lunetier-cart-item" data-line="{{ forloop.index }}">
                
                <div class="lunetier-cart-item-image">
                  {%- if item.image -%}
                    {% render 'responsive-image',
                      image: item.image,
                      sizes: '150px',
                      loading: 'lazy',
                      class: 'lunetier-cart-img',
                      alt: item.title
                    %}
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag: 'lunetier-cart-img' }}
                  {%- endif -%}
                </div>

                <div class="lunetier-cart-item-details">
                  <h3 class="lunetier-cart-item-title">
                    <a href="{{ item.url }}">{{ item.product.title }}</a>
                  </h3>
                  
                  {%- unless item.variant.title == 'Default Title' -%}
                    <p class="lunetier-cart-item-variant">{{ item.variant.title }}</p>
                  {%- endunless -%}

                  <div class="lunetier-cart-item-actions">
                    <div class="lunetier-cart-qty">
                      <button type="button" class="lunetier-cart-qty-btn" onclick="updateQuantity({{ forloop.index }}, -1)" aria-label="Diminuer la quantité">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                      </button>
                      <input type="number" 
                             name="updates[]" 
                             value="{{ item.quantity }}" 
                             min="0" 
                             class="lunetier-cart-qty-input"
                             data-line="{{ forloop.index }}"
                             aria-label="Quantité">
                      <button type="button" class="lunetier-cart-qty-btn" onclick="updateQuantity({{ forloop.index }}, 1)" aria-label="Augmenter la quantité">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                      </button>
                    </div>

                    <button type="button" class="lunetier-cart-remove" onclick="removeItem({{ forloop.index }})" aria-label="Retirer cet article">
                      Retirer
                    </button>
                  </div>
                </div>

                <div class="lunetier-cart-item-price">
                  {{ item.line_price | money }}
                </div>

              </div>
            {%- endfor -%}
          </div>

          <!-- COLONNE DROITE : RÉSUMÉ -->
          <div class="lunetier-cart-summary">
            <h2 class="lunetier-cart-summary-title">Résumé</h2>
            
            <div class="lunetier-cart-summary-row">
              <span>Sous-total</span>
              <span>{{ cart.total_price | money }}</span>
            </div>

            <div class="lunetier-cart-summary-row">
              <span>Livraison</span>
              <span>Offerte</span>
            </div>

            <div class="lunetier-cart-shipping-bar">
              <div class="lunetier-cart-shipping-progress" style="width: {% if cart.total_price >= 5000 %}100{% else %}{{ cart.total_price | times: 100 | divided_by: 5000 }}{% endif %}%;"></div>
            </div>
            <p class="lunetier-cart-shipping-text">
              {%- if cart.total_price >= 5000 -%}
                Livraison express gratuite débloquée !
              {%- else -%}
                {%- assign remaining = 5000 | minus: cart.total_price -%}
                Plus que {{ remaining | money }} pour la livraison express gratuite
              {%- endif -%}
            </p>

            <div class="lunetier-cart-total">
              <span>Total</span>
              <span>{{ cart.total_price | money }}</span>
            </div>

            <button type="submit" name="checkout" class="lunetier-cart-checkout-btn">
              Passer commande
            </button>

            <a href="{{ routes.all_products_collection_url }}" class="lunetier-cart-continue">
              Continuer mes achats
            </a>
          </div>

        </div>
      </form>

    {%- else -%}
      
      <div class="lunetier-cart-empty">
        <p>Votre panier est vide</p>
        <a href="{{ routes.all_products_collection_url }}" class="lunetier-cart-shop-btn">
          Découvrir la collection
        </a>
      </div>

    {%- endif -%}

  </div>
</div>

<script>
// Update quantity
function updateQuantity(line, change) {
  const input = document.querySelector(`input[data-line="${line}"]`);
  if (!input) return;
  
  const currentQty = parseInt(input.value);
  const newQty = Math.max(0, currentQty + change);
  
  input.value = newQty;
  updateCart(line, newQty);
}

// Remove item
function removeItem(line) {
  updateCart(line, 0);
}

// Update cart via AJAX
function updateCart(line, quantity) {
  const formData = new FormData();
  formData.append('line', line);
  formData.append('quantity', quantity);
  
  fetch('/cart/change.js', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      line: line,
      quantity: quantity
    })
  })
  .then(response => response.json())
  .then(cart => {
    console.log('✅ Cart updated:', cart);
    // Reload page to update cart display
    window.location.reload();
  })
  .catch(error => {
    console.error('❌ Error updating cart:', error);
  });
}
</script>

<style>
/* Grid layout pour panier */
.lunetier-cart-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 3rem;
  margin-top: 3rem;
}

@media (min-width: 1024px) {
  .lunetier-cart-grid {
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
  }
}

/* Items */
.lunetier-cart-items {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.lunetier-cart-item {
  display: grid;
  grid-template-columns: 100px 1fr auto;
  gap: 1.5rem;
  padding-bottom: 2rem;
  border-bottom: 1px solid var(--color-gray-200);
}

@media (max-width: 640px) {
  .lunetier-cart-item {
    grid-template-columns: 80px 1fr;
  }
  
  .lunetier-cart-item-price {
    grid-column: 2 / 3;
    text-align: right;
    margin-top: 1rem;
  }
}

.lunetier-cart-item-image {
  width: 100%;
  aspect-ratio: 4/5;
  background: var(--color-gray-50);
  overflow: hidden;
}

.lunetier-cart-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.lunetier-cart-item-details {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.lunetier-cart-item-title {
  font-family: var(--font-serif);
  font-size: 1.125rem;
  margin: 0;
}

.lunetier-cart-item-title a {
  color: var(--color-black);
  text-decoration: none;
  transition: opacity var(--transition-fast);
}

.lunetier-cart-item-title a:hover {
  opacity: 0.7;
}

.lunetier-cart-item-variant {
  font-size: 0.875rem;
  color: var(--color-gray-500);
  margin: 0;
}

.lunetier-cart-item-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-top: 1rem;
}

/* Quantity controls */
.lunetier-cart-qty {
  display: flex;
  align-items: center;
  border: 1px solid var(--color-gray-200);
  height: 2.5rem;
}

.lunetier-cart-qty-btn {
  width: 2.5rem;
  height: 100%;
  background: none;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background var(--transition-fast);
}

.lunetier-cart-qty-btn:hover {
  background: var(--color-gray-50);
}

.lunetier-cart-qty-input {
  width: 3rem;
  height: 100%;
  border: none;
  text-align: center;
  font-size: 0.875rem;
  appearance: none;
  -moz-appearance: textfield;
}

.lunetier-cart-qty-input::-webkit-outer-spin-button,
.lunetier-cart-qty-input::-webkit-inner-spin-button {
  -webkit-appearance: none;
}

.lunetier-cart-qty-input:focus {
  outline: none;
}

.lunetier-cart-remove {
  background: none;
  border: none;
  color: var(--color-gray-400);
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  cursor: pointer;
  transition: color var(--transition-fast);
}

.lunetier-cart-remove:hover {
  color: var(--color-error);
}

.lunetier-cart-item-price {
  font-weight: 600;
  font-size: 1rem;
}

/* Summary */
.lunetier-cart-summary {
  background: var(--color-gray-50);
  padding: 2rem;
  height: fit-content;
  position: sticky;
  top: 8rem;
}

.lunetier-cart-summary-title {
  font-family: var(--font-serif);
  font-size: 1.5rem;
  margin: 0 0 1.5rem 0;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--color-gray-200);
}

.lunetier-cart-summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 1rem;
  font-size: 0.9rem;
  color: var(--color-gray-600);
}

/* Shipping bar */
.lunetier-cart-shipping-bar {
  height: 4px;
  background: var(--color-gray-200);
  margin: 1.5rem 0 0.5rem 0;
  border-radius: 2px;
  overflow: hidden;
}

.lunetier-cart-shipping-progress {
  height: 100%;
  background: var(--color-black);
  transition: width 0.3s ease;
}

.lunetier-cart-shipping-text {
  font-size: 0.75rem;
  color: var(--color-gray-500);
  margin: 0 0 1.5rem 0;
}

.lunetier-cart-total {
  display: flex;
  justify-content: space-between;
  margin-top: 1.5rem;
  padding-top: 1.5rem;
  border-top: 1px solid var(--color-gray-200);
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 2rem;
}

.lunetier-cart-checkout-btn {
  width: 100%;
  background: var(--color-black);
  color: var(--color-white);
  padding: 1.25rem;
  text-align: center;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border: none;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.lunetier-cart-checkout-btn:hover {
  background: var(--color-gray-800);
  transform: translateY(-2px);
}

.lunetier-cart-continue {
  display: block;
  text-align: center;
  margin-top: 1rem;
  color: var(--color-gray-500);
  text-decoration: none;
  font-size: 0.875rem;
  transition: color var(--transition-fast);
}

.lunetier-cart-continue:hover {
  color: var(--color-black);
}

/* Empty state */
.lunetier-cart-empty {
  text-align: center;
  padding: 6rem 2rem;
}

.lunetier-cart-empty p {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  color: var(--color-gray-500);
}

.lunetier-cart-shop-btn {
  display: inline-block;
  background: var(--color-black);
  color: var(--color-white);
  padding: 1rem 2rem;
  text-decoration: none;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: all var(--transition-fast);
}

.lunetier-cart-shop-btn:hover {
  background: var(--color-gray-800);
  transform: translateY(-2px);
}
</style>

