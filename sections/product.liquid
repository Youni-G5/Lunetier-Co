{% comment %}
  Section Produit "Lunetier" - Design Premium
  R√©plique exacte du prototype React avec isolation CSS et gestion du header sticky.
{% endcomment %}

<style>
  /* --- VARIABLES & RESET --- */
  .lunetier-prod-section {
    background-color: #ffffff;
    color: #111827; /* gray-900 */
    font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    /* Espacement pour le Header Sticky : on pr√©voit large */
    padding-top: 8rem; /* pt-32 √©quivalent */
    padding-bottom: 8rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .lunetier-prod-section {
      padding-top: 6rem; /* pt-24 sur mobile */
      padding-bottom: 6rem; /* Espace pour la barre sticky mobile */
    }
  }

  .lunetier-prod-container {
    max-width: 80rem; /* max-w-7xl */
    margin: 0 auto;
    padding: 0 1.5rem; /* px-6 */
    box-sizing: border-box;
  }

  /* --- GRID LAYOUT --- */
  .lunetier-prod-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .lunetier-prod-grid {
      /* Correspond exactement √† grid-cols-[1.5fr_1fr] */
      grid-template-columns: 1.5fr 1fr;
      gap: 4rem; /* gap-16 √©quivalent */
      align-items: start;
    }
  }

  /* --- COLONNE GAUCHE : IMAGES --- */
  .lunetier-prod-gallery {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }

  .lunetier-prod-media-item {
    width: 100%;
    background-color: #f9fafb; /* gray-50 */
    aspect-ratio: 4 / 5;
    overflow: hidden;
    cursor: zoom-in;
    position: relative;
  }

  .lunetier-prod-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
    display: block;
  }

  .lunetier-prod-media-item:hover .lunetier-prod-img {
    transform: scale(1.05);
  }

  /* --- COLONNE DROITE : INFO (STICKY) --- */
  .lunetier-prod-details {
    position: relative;
  }

  @media (min-width: 1024px) {
    .lunetier-prod-details {
      position: sticky;
      /* On laisse de la place pour le header (env. 80-100px) + un peu d'air */
      top: 8rem; 
    }
  }

  /* Typography Elements */
  .lunetier-prod-collection {
    font-size: 0.75rem; /* text-xs */
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em; /* tracking-widest */
    color: #6b7280; /* gray-500 */
    margin-bottom: 0.5rem;
  }

  .lunetier-prod-title {
    font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
    font-size: 2.25rem; /* text-4xl */
    line-height: 1.1;
    font-weight: 500;
    margin: 0 0 1rem 0;
  }

  @media (min-width: 768px) {
    .lunetier-prod-title {
      font-size: 3rem; /* text-5xl */
    }
  }

  /* Price & Reviews Row */
  .lunetier-prod-meta-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #f3f4f6; /* gray-100 */
    padding-bottom: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .lunetier-prod-price {
    font-size: 1.5rem; /* text-2xl */
    font-weight: 500;
  }

  .lunetier-prod-rating {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem; /* text-sm */
    font-weight: 500;
    text-decoration: underline;
    cursor: pointer;
    color: #111827;
  }

  .lunetier-prod-rating:hover {
    color: #4b5563;
  }

  .lunetier-prod-star {
    width: 1rem;
    height: 1rem;
    fill: #000000;
  }

  .lunetier-prod-desc {
    color: #4b5563; /* gray-600 */
    line-height: 1.625; /* relaxed */
    margin-bottom: 2rem;
    font-size: 1rem;
  }

  /* --- VARIANTS --- */
  .lunetier-prod-variants {
    margin-bottom: 2rem;
  }

  .lunetier-prod-variant-label {
    display: block;
    font-size: 0.875rem; /* text-sm */
    font-weight: 700;
    margin-bottom: 0.75rem;
  }

  .lunetier-prod-options-group {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  /* Cacher le radio natif mais le garder accessible */
  .lunetier-prod-radio-input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .lunetier-prod-radio-btn {
    display: inline-block;
    padding: 0.75rem 1.25rem; /* px-5 py-3 */
    font-size: 0.875rem; /* text-sm */
    border: 1px solid #e5e7eb; /* border-gray-200 */
    background-color: #ffffff;
    color: #111827;
    cursor: pointer;
    transition: all 0.2s;
    user-select: none;
  }

  .lunetier-prod-radio-btn:hover {
    border-color: #9ca3af; /* border-gray-400 */
  }

  /* √âtat s√©lectionn√© : via le selecteur sibling CSS */
  .lunetier-prod-radio-input:checked + .lunetier-prod-radio-btn {
    background-color: #000000;
    color: #ffffff;
    border-color: #000000;
  }
  
  .lunetier-prod-radio-btn.is-disabled {
    opacity: 0.5;
    text-decoration: line-through;
    pointer-events: none;
    background-color: #f3f4f6;
  }

  /* --- FIT GUIDE --- */
  .lunetier-prod-fit {
    background-color: #f9fafb; /* gray-50 */
    padding: 1rem;
    border-radius: 2px;
    margin-bottom: 2rem;
  }

  .lunetier-prod-fit-title {
    font-size: 0.75rem; /* text-xs */
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em; /* tracking-wider */
    margin-bottom: 0.75rem;
  }

  .lunetier-prod-fit-bar {
    position: relative;
    height: 4px;
    background-color: #e5e7eb; /* gray-200 */
    width: 100%;
    margin-bottom: 0.5rem;
    border-radius: 9999px;
  }

  .lunetier-prod-fit-dot {
    position: absolute;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 12px; /* w-3 */
    height: 12px; /* h-3 */
    background-color: #000000;
    border: 2px solid #ffffff;
    border-radius: 50%;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }

  .lunetier-prod-fit-labels {
    display: flex;
    justify-content: space-between;
    font-size: 10px;
    text-transform: uppercase;
    color: #6b7280; /* gray-500 */
    font-weight: 500;
  }

  /* --- ACTION BUTTONS --- */
  .lunetier-prod-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem; /* gap-3 */
    margin-bottom: 2.5rem;
  }

  .lunetier-prod-btn-primary {
    width: 100%;
    background-color: #000000;
    color: #ffffff;
    padding: 1rem; /* py-4 */
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.025em; /* tracking-wide */
    border: none;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .lunetier-prod-btn-primary:hover {
    background-color: #1f2937; /* gray-800 */
  }
  
  .lunetier-prod-btn-primary:disabled {
    background-color: #d1d5db;
    cursor: not-allowed;
  }

  .lunetier-prod-btn-secondary {
    width: 100%;
    background-color: transparent;
    color: #000000;
    border: 1px solid #000000;
    padding: 0.75rem; /* py-3 */
    font-size: 0.75rem; /* text-xs */
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    transition: background-color 0.2s;
  }

  .lunetier-prod-btn-secondary:hover {
    background-color: #f9fafb; /* gray-50 */
  }

  /* --- ACCORDIONS --- */
  .lunetier-prod-accordions {
    border-top: 1px solid #e5e7eb; /* border-gray-200 */
  }

  .lunetier-prod-accordion-item {
    border-bottom: 1px solid #e5e7eb;
  }

  .lunetier-prod-summary {
    list-style: none; /* Enl√®ve la fl√®che par d√©faut */
    padding: 1.25rem 0; /* py-5 */
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    width: 100%;
  }
  
  .lunetier-prod-summary::-webkit-details-marker {
    display: none;
  }

  .lunetier-prod-summary:hover .lunetier-prod-summary-title {
    color: #4b5563;
  }

  .lunetier-prod-summary-title {
    font-size: 0.875rem; /* text-sm */
    font-weight: 700;
    color: #111827;
  }

  /* Icone + / - faite en CSS */
  .lunetier-prod-icon {
    position: relative;
    width: 1rem;
    height: 1rem;
  }
  
  .lunetier-prod-icon::before,
  .lunetier-prod-icon::after {
    content: '';
    position: absolute;
    background-color: #000;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: transform 0.3s ease;
  }
  
  .lunetier-prod-icon::before { width: 100%; height: 2px; } /* Barre Horizontale */
  .lunetier-prod-icon::after { width: 2px; height: 100%; } /* Barre Verticale */

  /* Quand ouvert, on cache la barre verticale pour faire un "Moins" */
  details[open] .lunetier-prod-icon::after {
    transform: translate(-50%, -50%) rotate(90deg);
    height: 0;
  }

  .lunetier-prod-accordion-content {
    padding-bottom: 1.25rem;
    font-size: 0.875rem; /* text-sm */
    color: #4b5563; /* text-gray-600 */
    line-height: 1.625;
  }

  /* --- TRUST BADGES --- */
  .lunetier-prod-trust {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #f3f4f6; /* gray-100 */
  }

  .lunetier-prod-trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }

  .lunetier-prod-trust-icon {
    width: 1.5rem; /* w-6 */
    height: 1.5rem; /* h-6 */
    color: #9ca3af; /* gray-400 */
  }

  .lunetier-prod-trust-text {
    font-size: 10px;
    font-weight: 700;
    color: #6b7280; /* gray-500 */
    text-transform: uppercase;
  }

  /* --- MOBILE STICKY BAR --- */
  .lunetier-prod-mobile-sticky {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #ffffff;
    border-top: 1px solid #e5e7eb;
    padding: 1rem;
    z-index: 40;
    display: flex;
    align-items: center;
    gap: 1rem;
    box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  @media (min-width: 1024px) {
    .lunetier-prod-mobile-sticky {
      display: none;
    }
  }

  .lunetier-prod-mobile-info {
    flex: 1;
    min-width: 0; /* Pour que le truncate fonctionne */
  }

  .lunetier-prod-mobile-title {
    font-size: 0.75rem; /* text-xs */
    font-weight: 700;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .lunetier-prod-mobile-variant {
    font-size: 0.75rem; /* text-xs */
    color: #6b7280;
  }

  .lunetier-prod-mobile-btn {
    background-color: #000000;
    color: #ffffff;
    padding: 0.75rem 1.5rem;
    font-size: 0.75rem; /* text-xs */
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    border: none;
    white-space: nowrap;
  }
</style>

<div class="lunetier-prod-section">
  <div class="lunetier-prod-container">
    
    <!-- WRAPPER FORM (Pour englober toute la logique d'ajout au panier) -->
    {%- form 'product', product, id: 'product-form-lunetier', class: 'product-form' -%}
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" id="selected-variant-id">

      <div class="lunetier-prod-grid">
        
        <!-- === GAUCHE : GALERIE === -->
        <div class="lunetier-prod-gallery">
          {%- if product.media.size > 0 -%}
            {%- for media in product.media -%}
              <div class="lunetier-prod-media-item">
                {% render 'media', media: media %}
                {%- if media.media_type == 'image' -%}
                   {{ media | image_url: width: 1400 | image_tag: class: 'lunetier-prod-img', loading: 'eager' }}
                {%- endif -%}
              </div>
            {%- endfor -%}
          {%- else -%}
            <div class="lunetier-prod-media-item">
              {{ 'product-1' | placeholder_svg_tag: 'lunetier-prod-img' }}
            </div>
          {%- endif -%}
        </div>

        <!-- === DROITE : DETAILS STICKY === -->
        <div class="lunetier-prod-details">
          
          <!-- Collection Tag -->
          <div class="lunetier-prod-collection">
            {{ product.vendor | default: "Collection Signature" }}
          </div>
          
          <!-- Titre -->
          <h1 class="lunetier-prod-title">{{ product.title }}</h1>
          
          <!-- Prix & Avis -->
          <div class="lunetier-prod-meta-row">
            <span class="lunetier-prod-price">{{ product.price | money }}</span>
            <div class="lunetier-prod-rating">
              <div style="display:flex;">
                {%- for i in (1..5) -%}
                  <svg class="lunetier-prod-star" viewBox="0 0 24 24"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
                {%- endfor -%}
              </div>
              <span>(48 avis)</span>
            </div>
          </div>

          <!-- Description Courte -->
          <div class="lunetier-prod-desc">
            {{ product.description | strip_html | truncatewords: 35 }}
          </div>

          <!-- Variantes (Style Boutons) -->
          {%- unless product.has_only_default_variant -%}
            <div class="lunetier-prod-variants">
              {%- for option in product.options_with_values -%}
                <span class="lunetier-prod-variant-label">Couleur : <span id="selected-option-{{ forloop.index0 }}">{{ option.selected_value }}</span></span>
                <div class="lunetier-prod-options-group">
                  {%- for value in option.values -%}
                    <label>
                      <input type="radio" 
                             name="option-{{ option.name | handleize }}" 
                             value="{{ value | escape }}"
                             class="lunetier-prod-radio-input"
                             data-option-index="{{ forloop.parentloop.index0 }}"
                             {% if option.selected_value == value %}checked{% endif %}
                             onchange="updateVariant(this)">
                      <span class="lunetier-prod-radio-btn">{{ value }}</span>
                    </label>
                  {%- endfor -%}
                </div>
              {%- endfor -%}
            </div>
          {%- endunless -%}

          <!-- Fit Guide Visual -->
          <div class="lunetier-prod-fit">
            <div class="lunetier-prod-fit-title">Guide de Fit</div>
            <div class="lunetier-prod-fit-bar">
              <!-- Position du point : Narrow=15%, Medium=50%, Wide=85% -->
              {%- assign fit_pos = '50%' -%}
              {%- if section.settings.fit_type == 'narrow' %}{% assign fit_pos = '15%' %}{% endif -%}
              {%- if section.settings.fit_type == 'wide' %}{% assign fit_pos = '85%' %}{% endif -%}
              <div class="lunetier-prod-fit-dot" style="left: {{ fit_pos }};"></div>
            </div>
            <div class="lunetier-prod-fit-labels">
              <span>√âtroit</span>
              <span>Moyen</span>
              <span>Large</span>
            </div>
          </div>

          <!-- Actions Desktop -->
          <div class="lunetier-prod-actions">
            <button type="submit" name="add" class="lunetier-prod-btn-primary" 
                    {% unless product.available %}disabled{% endunless %}>
              {%- if product.available -%}
                Ajouter au panier - {{ product.price | money }}
              {%- else -%}
                √âpuis√©
              {%- endif -%}
            </button>
            <button type="button" class="lunetier-prod-btn-secondary" onclick="window.openVirtualTryOn()">
             <span>üì∑</span> Essai Virtuel (B√™ta)
            </button>
          </div>

          <!-- Accord√©ons -->
          <div class="lunetier-prod-accordions">
            
            <details class="lunetier-prod-accordion-item" open>
              <summary class="lunetier-prod-summary">
                <span class="lunetier-prod-summary-title">Description & Conception</span>
                <span class="lunetier-prod-icon"></span>
              </summary>
              <div class="lunetier-prod-accordion-content">
                {{ product.description }}
              </div>
            </details>

            <details class="lunetier-prod-accordion-item">
              <summary class="lunetier-prod-summary">
                <span class="lunetier-prod-summary-title">Dimensions</span>
                <span class="lunetier-prod-icon"></span>
              </summary>
              <div class="lunetier-prod-accordion-content">
                <ul style="padding-left:1.2rem; margin:0;">
                  <li>Largeur totale : 140mm</li>
                  <li>Verres : 48mm</li>
                  <li>Pont : 22mm</li>
                  <li>Branches : 145mm</li>
                </ul>
              </div>
            </details>

            <details class="lunetier-prod-accordion-item">
              <summary class="lunetier-prod-summary">
                <span class="lunetier-prod-summary-title">Livraison & Retours</span>
                <span class="lunetier-prod-icon"></span>
              </summary>
              <div class="lunetier-prod-accordion-content">
                <p style="margin:0;">Livraison express offerte (24-48h). Essayez-les chez vous pendant 30 jours. Si elles ne conviennent pas, le retour est gratuit et imm√©diat.</p>
              </div>
            </details>

          </div>

          <!-- Trust Badges -->
          <div class="lunetier-prod-trust">
            <div class="lunetier-prod-trust-item">
              <svg class="lunetier-prod-trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
              <span class="lunetier-prod-trust-text">Garantie 2 ans</span>
            </div>
            <div class="lunetier-prod-trust-item">
              <svg class="lunetier-prod-trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><rect x="1" y="3" width="15" height="13"></rect><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon><circle cx="5.5" cy="18.5" r="2.5"></circle><circle cx="18.5" cy="18.5" r="2.5"></circle></svg>
              <span class="lunetier-prod-trust-text">Livraison 24h</span>
            </div>
            <div class="lunetier-prod-trust-item">
              <svg class="lunetier-prod-trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path></svg>
              <span class="lunetier-prod-trust-text">Retours Gratuits</span>
            </div>
          </div>

        </div>
      </div>

      <!-- === MOBILE STICKY BAR === -->
      <div class="lunetier-prod-mobile-sticky">
        <div class="lunetier-prod-mobile-info">
          <div class="lunetier-prod-mobile-title">{{ product.title }}</div>
          <div class="lunetier-prod-mobile-variant">
            {% unless product.has_only_default_variant %}
              {{ product.selected_or_first_available_variant.title }}
            {% else %}
               Taille unique
            {% endunless %}
          </div>
        </div>
        <button type="submit" name="add" class="lunetier-prod-mobile-btn" 
                {% unless product.available %}disabled{% endunless %}>
           Ajouter - {{ product.price | money }}
        </button>
      </div>

    {%- endform -%}
  </div>
</div>

