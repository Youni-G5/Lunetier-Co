</script>

{% schema %}
{
  "name": "Page Produit Lunetier",
  "settings": [
    {
      "type": "select",
      "id": "fit_type",
      "label": "Type de Fit (D√©faut)",
      "options": [
        { "value": "narrow", "label": "√âtroit" },
        { "value": "medium", "label": "Moyen" },
        { "value": "wide", "label": "Large" }
      ],
      "default": "medium"
    }
  ]
}
{% endschema %}