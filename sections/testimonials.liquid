{% comment %}
  Testimonials Section "Lunetier" - High-impact social proof
  Design: Dark background, large typography, focus on trust
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding-top: 5rem; /* py-20 */
    padding-bottom: 5rem;
  }

  .lunetier-testimonial-container {
    max-width: 80rem; /* max-w-7xl */
    margin: 0 auto;
    padding: 0 1.5rem; /* px-6 */
    text-align: center;
  }

  /* --- STARS --- */
  .lunetier-stars {
    display: flex;
    justify-content: center;
    gap: 0.25rem;
    margin-bottom: 2rem; /* mb-8 */
  }

  .lunetier-star-icon {
    width: 1.25rem; /* w-5 */
    height: 1.25rem; /* h-5 */
    fill: currentColor;
  }

  /* --- QUOTE --- */
  .lunetier-quote {
    font-family: serif;
    font-size: 1.5rem; /* text-2xl */
    line-height: 1.4;
    max-width: 48rem; /* max-w-3xl */
    margin: 0 auto 2.5rem auto; /* mb-10 */
  }

  @media (min-width: 768px) {
    .lunetier-quote {
      font-size: 2.25rem; /* text-4xl */
      line-height: 1.3;
    }
  }

  /* --- AUTHOR --- */
  .lunetier-author {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem; /* gap-4 */
  }

  .lunetier-avatar {
    width: 3rem; /* w-12 */
    height: 3rem; /* h-12 */
    border-radius: 9999px;
    background-color: #374151; /* gray-700 placeholder */
    overflow: hidden;
  }

  .lunetier-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .lunetier-author-info {
    text-align: left;
  }

  .lunetier-author-name {
    font-weight: 700;
    font-size: 0.875rem; /* text-sm */
    margin: 0;
    font-family: sans-serif;
  }

  .lunetier-author-detail {
    font-size: 0.75rem; /* text-xs */
    opacity: 0.7; /* text-gray-400 effect */
    margin: 0;
    font-family: sans-serif;
  }
</style>

<div class="lunetier-testimonial-container">
  
  <!-- STARS -->
  <div class="lunetier-stars">
    {%- for i in (1..section.settings.star_count) -%}
      <svg xmlns="http://www.w3.org/2000/svg" class="lunetier-star-icon" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
      </svg>
    {%- endfor -%}
  </div>

  <!-- QUOTE -->
  <h2 class="lunetier-quote">
    “{{ section.settings.quote_text }}”
  </h2>

  <!-- AUTHOR -->
  <div class="lunetier-author">
    <div class="lunetier-avatar">
      {%- if section.settings.author_image != blank -%}
        {{ section.settings.author_image | image_url: width: 100 | image_tag: 
          loading: 'lazy', 
          alt: section.settings.author_name 
        }}
      {%- else -%}
        <!-- Subtle placeholder -->
        {{ 'image' | placeholder_svg_tag }}
      {%- endif -%}
    </div>
    
    <div class="lunetier-author-info">
      <p class="lunetier-author-name">{{ section.settings.author_name }}</p>
      <p class="lunetier-author-detail">{{ section.settings.author_details }}</p>
    </div>
  </div>

</div>

{% schema %}
{
  "name": "Single Testimonial",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "star_count",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "Number of stars",
      "default": 5
    },
    {
      "type": "textarea",
      "id": "quote_text",
      "label": "Quote",
      "default": "Finally glasses I don't feel on my nose. The quality is comparable to luxury brands, but at a fair price."
    },
    {
      "type": "image_picker",
      "id": "author_image",
      "label": "Author photo"
    },
    {
      "type": "text",
      "id": "author_name",
      "label": "Author name",
      "default": "Sophie M."
    },
    {
      "type": "text",
      "id": "author_details",
      "label": "Author details",
      "default": "Verified customer • Paris"
    }
  ],
  "presets": [
    {
      "name": "Testimonial Lunetier"
    }
  ]
}
{% endschema %}