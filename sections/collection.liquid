{% comment %}
  "Lunetier" Collection Section - Product grid with filters
  Design: Clean filter sidebar, responsive grid, uses product-card snippet
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    padding-top: 4rem;
    padding-bottom: 6rem;
    background-color: var(--color-white);
    color: var(--color-black);
  }

  .lunetier-col-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* --- COLLECTION HEADER --- */
  .lunetier-col-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .lunetier-col-title {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .lunetier-col-title {
      font-size: 3.5rem;
    }
  }

  .lunetier-col-desc {
    max-width: 40rem;
    margin: 0 auto;
    color: var(--color-gray-600);
    font-family: var(--font-sans);
    line-height: 1.6;
  }

  /* --- TOOLBAR (Sort + Mobile Filters) --- */
  .lunetier-col-toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid var(--color-gray-100);
    border-bottom: 1px solid var(--color-gray-100);
    padding: 1rem 0;
    margin-bottom: 2rem;
  }

  .lunetier-sort-select {
    border: none;
    background: transparent;
    font-size: 0.875rem;
    font-family: var(--font-sans);
    cursor: pointer;
    color: var(--color-black);
    outline: none;
  }

  .lunetier-filter-count {
    font-size: 0.875rem;
    color: var(--color-gray-600);
    font-family: var(--font-sans);
  }

  /* --- GRID LAYOUT (Sidebar + Products) --- */
  .lunetier-col-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .lunetier-col-layout {
      grid-template-columns: 16rem 1fr;
    }
  }

  /* --- SIDEBAR FILTERS --- */
  .lunetier-filters {
    display: none;
  }

  @media (min-width: 1024px) {
    .lunetier-filters {
      display: block;
    }
  }

  .lunetier-filter-group {
    border-bottom: 1px solid var(--color-gray-100);
    padding-bottom: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .lunetier-filter-title {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 1rem;
    display: block;
    font-family: var(--font-sans);
  }

  .lunetier-filter-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .lunetier-filter-item {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-gray-600);
    cursor: pointer;
    font-family: var(--font-sans);
  }

  .lunetier-filter-item:hover {
    color: var(--color-black);
  }

  .lunetier-filter-checkbox {
    width: 1rem;
    height: 1rem;
    border: 1px solid var(--color-gray-200);
    border-radius: 2px;
    accent-color: var(--color-black);
  }

  /* --- PAGINATION --- */
  .lunetier-pagination {
    margin-top: 4rem;
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  .lunetier-page-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid var(--color-gray-200);
    color: var(--color-black);
    text-decoration: none;
    font-size: 0.875rem;
    font-family: var(--font-sans);
    transition: all var(--transition-fast);
  }

  .lunetier-page-link:hover,
  .lunetier-page-link.current {
    background-color: var(--color-black);
    color: var(--color-white);
    border-color: var(--color-black);
  }

  .lunetier-clear-filters {
    font-size: 0.75rem;
    text-decoration: underline;
    color: var(--color-gray-500);
    font-family: var(--font-sans);
    transition: color var(--transition-fast);
  }

  .lunetier-clear-filters:hover {
    color: var(--color-black);
  }

  /* --- EMPTY STATE --- */
  .lunetier-empty-state {
    grid-column: 1 / -1;
    text-align: center;
    padding: 4rem 0;
    color: var(--color-gray-500);
    font-family: var(--font-sans);
  }
</style>

<div class="lunetier-col-container">
  
  <!-- HEADER -->
  <div class="lunetier-col-header">
    <h1 class="lunetier-col-title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="lunetier-col-desc">{{ collection.description }}</div>
    {% endif %}
  </div>

  {% paginate collection.products by section.settings.products_per_page %}

    <!-- TOOLBAR -->
    <div class="lunetier-col-toolbar">
      <div class="lunetier-filter-count">
        {{ collection.products_count }} product{% if collection.products_count > 1 %}s{% endif %}
      </div>
      <div class="lunetier-sort">
        <label for="sort-by" class="visually-hidden">Sort by</label>
        <select id="sort-by" class="lunetier-sort-select" onchange="location.search = '?sort_by=' + this.value">
          {% for option in collection.sort_options %}
            <option value="{{ option.value }}" {% if option.value == collection.sort_by %}selected{% endif %}>
              {{ option.name }}
            </option>
          {% endfor %}
        </select>
      </div>
    </div>

    <div class="lunetier-col-layout">
      
      <!-- SIDEBAR FILTERS (Native Shopify) -->
      <aside class="lunetier-filters">
        <form class="filter-form">
          {%- for filter in collection.filters -%}
            <div class="lunetier-filter-group">
              <span class="lunetier-filter-title">{{ filter.label }}</span>
              
              {%- case filter.type -%}
                {%- when 'list' -%}
                  <ul class="lunetier-filter-list">
                    {%- for value in filter.values -%}
                      <li>
                        <label class="lunetier-filter-item">
                          <input type="checkbox"
                            name="{{ value.param_name }}"
                            value="{{ value.value }}"
                            class="lunetier-filter-checkbox"
                            {% if value.active %}checked{% endif %}
                            onchange="this.closest('form').submit()"
                          >
                          <span>{{ value.label }}</span>
                          <span style="color: var(--color-gray-400); font-size: 0.75rem;">({{ value.count }})</span>
                        </label>
                      </li>
                    {%- endfor -%}
                  </ul>
                
                {%- when 'price_range' -%}
                   <div style="font-size: 0.875rem; color: var(--color-gray-600);">
                     {{ filter.min_value.value | money }} - {{ filter.max_value.value | money }}
                   </div>
              {%- endcase -%}
            </div>
          {%- endfor -%}
          
          <!-- "Clear all" link if filters are active -->
          {%- if current_tags or collection.filters.size > 0 -%}
             <a href="{{ collection.url }}" class="lunetier-clear-filters">Clear filters</a>
          {%- endif -%}
        </form>
      </aside>

      <!-- PRODUCTS GRID -->
      <div class="lunetier-products-grid">
        {%- for product in collection.products -%}
          {% render 'product-card',
            product: product,
            show_second_image: true,
            show_badge: true,
            show_vendor: true,
            image_loading: 'lazy'
          %}
        {%- else -%}
          <p class="lunetier-empty-state">No products match your search.</p>
        {%- endfor -%}
      </div>

    </div>

    <!-- PAGINATION -->
    {%- if paginate.pages > 1 -%}
      <div class="lunetier-pagination">
        {%- if paginate.previous -%}
          <a href="{{ paginate.previous.url }}" class="lunetier-page-link" aria-label="Previous page">&larr;</a>
        {%- endif -%}

        {%- for part in paginate.parts -%}
          {%- if part.is_link -%}
            <a href="{{ part.url }}" class="lunetier-page-link" aria-label="Page {{ part.title }}">{{ part.title }}</a>
          {%- else -%}
            <span class="lunetier-page-link {% if part.title == paginate.current_page %}current{% endif %}" aria-current="{% if part.title == paginate.current_page %}page{% endif %}">{{ part.title }}</span>
          {%- endif -%}
        {%- endfor -%}

        {%- if paginate.next -%}
          <a href="{{ paginate.next.url }}" class="lunetier-page-link" aria-label="Next page">&rarr;</a>
        {%- endif -%}
      </div>
    {%- endif -%}

  {% endpaginate %}
</div>

{% schema %}
{
  "name": "Main Collection",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 6,
      "max": 24,
      "step": 3,
      "default": 12,
      "label": "Products per page"
    }
  ]
}
{% endschema %}