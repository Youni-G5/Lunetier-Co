        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Couleur accent",
        "default": "#6b7280"
      },
      {
        "type": "header",
        "content": "Badges"
      },
      {
        "type": "color",
        "id": "badge_sale_bg",
        "label": "Badge promo - Fond",
