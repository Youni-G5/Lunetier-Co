{% endcomment %}

<style>
  /* Button Trigger */
  .lunetier-lang-trigger {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: transparent;
    border: 1px solid var(--color-gray-200);
    border-radius: 6px;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--color-gray-700);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .lunetier-lang-trigger:hover {
    border-color: var(--color-black);
    background-color: var(--color-gray-50);
  }

  .lunetier-lang-flag {
    width: 20px;
    height: 15px;
    border-radius: 2px;
    object-fit: cover;
  }

  /* Modal Overlay */
  .lunetier-lang-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    padding: 1rem;
  }

  .lunetier-lang-modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lunetier-lang-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  /* Modal Content */
  .lunetier-lang-content {
    position: relative;
    background: white;
    border-radius: 12px;
    max-width: 500px;
    width: 100%;
    max-height: 80vh;
    overflow-y: auto;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .lunetier-lang-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-gray-200);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .lunetier-lang-title {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 400;
    margin: 0;
  }

  .lunetier-lang-close {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--color-gray-500);
    transition: color var(--transition-fast);
  }

  .lunetier-lang-close:hover {
    color: var(--color-black);
  }

  .lunetier-lang-body {
    padding: 1.5rem;
  }

  .lunetier-lang-section {
    margin-bottom: 2rem;
  }

  .lunetier-lang-section:last-child {
    margin-bottom: 0;
  }

  .lunetier-lang-section-title {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-500);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  /* Country Grid */
  .lunetier-country-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 0.75rem;
  }

  .lunetier-country-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    border: 1px solid var(--color-gray-200);
    border-radius: 8px;
    cursor: pointer;
    transition: all var(--transition-fast);
    background: white;
    text-decoration: none;
    color: inherit;
  }

  .lunetier-country-option:hover {
    border-color: var(--color-black);
    background-color: var(--color-gray-50);
    transform: translateY(-2px);
  }

  .lunetier-country-option.active {
    border-color: var(--color-black);
    background-color: var(--color-gray-100);
  }

  .lunetier-country-flag {
    width: 32px;
    height: 24px;
    border-radius: 3px;
    object-fit: cover;
  }

  .lunetier-country-name {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    font-weight: 500;
    text-align: center;
  }

  /* Language Options */
  .lunetier-lang-options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .lunetier-lang-option {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    border: 1px solid var(--color-gray-200);
    border-radius: 8px;
    cursor: pointer;
    transition: all var(--transition-fast);
    background: white;
    font-family: var(--font-sans);
    font-size: 0.9375rem;
  }

  .lunetier-lang-option:hover {
    border-color: var(--color-black);
    background-color: var(--color-gray-50);
  }

  .lunetier-lang-option.active {
    border-color: var(--color-black);
    background-color: var(--color-gray-100);
  }

  .lunetier-lang-check {
    width: 20px;
    height: 20px;
    border: 2px solid var(--color-gray-300);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lunetier-lang-option.active .lunetier-lang-check {
    border-color: var(--color-black);
    background-color: var(--color-black);
  }

  .lunetier-lang-check svg {
    display: none;
    width: 12px;
    height: 12px;
    color: white;
  }

  .lunetier-lang-option.active .lunetier-lang-check svg {
    display: block;
  }
</style>

