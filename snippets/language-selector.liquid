<script>
  function openLangModal() {
    document.getElementById('langModal').classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeLangModal() {
    document.getElementById('langModal').classList.remove('active');
    document.body.style.overflow = '';
  }

  // Country selection
  document.querySelectorAll('.lunetier-country-option').forEach(option => {
    option.addEventListener('click', function() {
      document.querySelectorAll('.lunetier-country-option').forEach(o => o.classList.remove('active'));
      this.classList.add('active');
      
      const country = this.dataset.country;
      console.log('Selected country:', country);
      // Here you can add logic to change Shopify market
    });
  });

  // Language selection
  document.querySelectorAll('.lunetier-lang-option').forEach(option => {
    option.addEventListener('click', function() {
      document.querySelectorAll('.lunetier-lang-option').forEach(o => o.classList.remove('active'));
      this.classList.add('active');
      
      const lang = this.dataset.lang;
      console.log('Selected language:', lang);
      // Here you can add logic to change site language
      
      // Close modal after selection
      setTimeout(() => closeLangModal(), 300);
    });
  });

  // Close on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeLangModal();
    }
  });
</script>