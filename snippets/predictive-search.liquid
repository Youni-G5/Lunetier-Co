{% comment %}
  Snippet: Recherche Pr√©dictive
  Affiche les r√©sultats de recherche en temps r√©el avec cartes produits
{% endcomment %}

<div class="predictive-search" id="PredictiveSearch-{{ section_id }}" role="status" aria-live="polite">
  <div class="predictive-search-loading" id="PredictiveSearchLoading-{{ section_id }}">
    <span class="predictive-search-spinner"></span>
    <span>Recherche en cours...</span>
  </div>
  
  <div class="predictive-search-results" id="PredictiveSearchResults-{{ section_id }}">
    <!-- R√©sultats inject√©s par JavaScript -->
  </div>
</div>

<style>
/* === PREDICTIVE SEARCH === */
.predictive-search {
  width: 100%;
  margin-top: 2rem;
}

.predictive-search-loading {
  display: none;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  padding: 3rem;
  color: var(--color-gray-600);
  font-size: 0.875rem;
  font-family: var(--font-sans);
}

.predictive-search-loading.is-active {
  display: flex;
}

.predictive-search-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid var(--color-gray-200);
  border-top-color: var(--color-black);
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.predictive-search-results {
  display: none;
}

.predictive-search-results.is-visible {
  display: block;
}

.predictive-search-status {
  padding: 3rem;
  text-align: center;
  color: var(--color-gray-600);
  font-size: 0.9375rem;
  font-family: var(--font-sans);
}

/* === RESULTS GRID === */
.predictive-search-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 2rem;
  padding: 0;
  margin: 0 0 2rem 0;
}

@media (max-width: 1024px) {
  .predictive-search-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }
}

@media (max-width: 768px) {
  .predictive-search-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
}

/* === PRODUCT CARD === */
.predictive-search-card {
  display: block;
  text-decoration: none;
  background: transparent;
  transition: transform var(--transition-fast);
  position: relative;
}

.predictive-search-card:hover {
  transform: translateY(-4px);
}

.predictive-search-card-image {
  position: relative;
  width: 100%;
  padding-top: 100%;
  background-color: var(--color-gray-50, #f9fafb);
  overflow: hidden;
  border-radius: 4px;
  margin-bottom: 1rem;
}

.predictive-search-card-image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--transition-base);
}

.predictive-search-card:hover .predictive-search-card-image img {
  transform: scale(1.05);
}

.predictive-search-card-placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40%;
  height: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.predictive-search-card-placeholder svg {
  width: 100%;
  height: 100%;
  color: var(--color-gray-300);
}

.predictive-search-card-info {
  text-align: left;
}

.predictive-search-card-title {
  font-size: 0.9375rem;
  font-weight: 400;
  color: var(--color-black);
  margin: 0 0 0.5rem 0;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-family: var(--font-serif);
  min-height: 2.8em;
}

.predictive-search-card-price {
  font-size: 0.875rem;
  font-weight: 400;
  color: var(--color-black);
  font-family: var(--font-sans);
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.predictive-search-card-price--compare {
  text-decoration: line-through;
  color: var(--color-gray-400);
  font-size: 0.8125rem;
}

.predictive-search-card-price--sale {
  color: #dc2626;
  font-weight: 500;
}

/* === VIEW ALL === */
.predictive-search-footer {
  padding: 2rem 0 0 0;
  text-align: center;
  border-top: 1px solid var(--color-gray-100);
}

.predictive-search-view-all {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 1rem 2rem;
  background-color: var(--color-black);
  color: var(--color-white);
  text-decoration: none;
  border-radius: 4px;
  font-size: 0.875rem;
  font-weight: 500;
  transition: opacity var(--transition-fast);
  font-family: var(--font-sans);
}

.predictive-search-view-all:hover {
  opacity: 0.85;
}

.predictive-search-view-all svg {
  width: 16px;
  height: 16px;
}
</style>

<script>
(function() {
  'use strict';
  
  const sectionId = '{{ section_id }}';
  const searchInput = document.getElementById('SearchInput-' + sectionId);
  const loadingEl = document.getElementById('PredictiveSearchLoading-' + sectionId);
  const resultsEl = document.getElementById('PredictiveSearchResults-' + sectionId);
  
  if (!searchInput || !loadingEl || !resultsEl) {
    console.error('‚ùå Predictive search: Missing elements');
    return;
  }
  
  console.log('‚úÖ Predictive search initialized');
  
  let searchTimeout;
  let currentQuery = '';
  
  // === SHOPIFY MONEY FORMAT ===
  {% if shop.money_format %}
    const moneyFormat = '{{ shop.money_format }}';
  {% else %}
    const moneyFormat = '{{amount_with_comma_separator}} ‚Ç¨';
  {% endif %}
  
  function formatMoney(cents) {
    if (typeof cents === 'string') {
      cents = cents.replace('.', '');
    }
    const value = Number(cents) / 100;
    let formatted = moneyFormat;
    
    // Replace placeholders
    formatted = formatted.replace('{{amount}}', value.toFixed(2));
    formatted = formatted.replace('{{amount_with_comma_separator}}', value.toFixed(2).replace('.', ','));
    formatted = formatted.replace('{{amount_no_decimals}}', Math.round(value).toString());
    formatted = formatted.replace('{{amount_with_space_separator}}', value.toFixed(2).replace('.', ','));
    
    return formatted;
  }
  
  // === SEARCH FUNCTION ===
  function performSearch(query) {
    if (query.length < 2) {
      resultsEl.classList.remove('is-visible');
      resultsEl.innerHTML = '';
      return;
    }
    
    currentQuery = query;
    console.log('üîç Searching for:', query);
    
    // Show loading
    loadingEl.classList.add('is-active');
    resultsEl.classList.remove('is-visible');
    
    // Shopify Predictive Search API
    const url = `/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=8`;
    console.log('üîó API URL:', url);
    
    fetch(url)
      .then(response => {
        console.log('üì° Response status:', response.status);
        if (!response.ok) {
          throw new Error('HTTP ' + response.status);
        }
        return response.json();
      })
      .then(data => {
        console.log('üì¶ API Response:', data);
        loadingEl.classList.remove('is-active');
        
        if (data.resources && data.resources.results && data.resources.results.products && data.resources.results.products.length > 0) {
          console.log('‚úÖ Products found:', data.resources.results.products.length);
          displayResults(data.resources.results.products, query);
        } else {
          console.log('‚ö†Ô∏è No products found');
          displayNoResults(query);
        }
      })
      .catch(error => {
        console.error('‚ùå Search error:', error);
        loadingEl.classList.remove('is-active');
        // Ne pas afficher d'erreur, juste "aucun r√©sultat"
        displayNoResults(query);
      });
  }
  
  // === DISPLAY RESULTS ===
  function displayResults(products, query) {
    console.log('üé® Displaying', products.length, 'products');
    let html = '<div class="predictive-search-grid">';
    
    products.forEach((product, index) => {
      console.log(`Product ${index + 1}:`, {
        title: product.title,
        price: product.price,
        image: product.featured_image ? 'yes' : 'no'
      });
      
      const price = formatMoney(product.price);
      const comparePrice = product.compare_at_price_max && product.compare_at_price_max > product.price 
        ? formatMoney(product.compare_at_price_max) 
        : null;
      
      // Image avec taille optimis√©e
      let imageHtml = '';
      if (product.featured_image) {
        const imageUrl = product.featured_image.includes('?') 
          ? product.featured_image + '&width=400' 
          : product.featured_image + '?width=400';
        imageHtml = `<img src="${imageUrl}" alt="${escapeHtml(product.title)}" loading="lazy">`;
      } else {
        imageHtml = `
          <div class="predictive-search-card-placeholder">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
          </div>
        `;
      }
      
      html += `
        <a href="${product.url}" class="predictive-search-card">
          <div class="predictive-search-card-image">
            ${imageHtml}
          </div>
          <div class="predictive-search-card-info">
            <h3 class="predictive-search-card-title">${escapeHtml(product.title)}</h3>
            <div class="predictive-search-card-price">
              ${comparePrice ? `<span class="predictive-search-card-price--compare">${comparePrice}</span>` : ''}
              <span class="${comparePrice ? 'predictive-search-card-price--sale' : ''}">${price}</span>
            </div>
          </div>
        </a>
      `;
    });
    
    html += '</div>';
    
    html += `
      <div class="predictive-search-footer">
        <a href="/search?q=${encodeURIComponent(query)}&type=product" class="predictive-search-view-all">
          <span>Voir tous les r√©sultats</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    `;
    
    resultsEl.innerHTML = html;
    resultsEl.classList.add('is-visible');
  }
  
  // === NO RESULTS ===
  function displayNoResults(query) {
    console.log('üö´ Displaying no results message');
    resultsEl.innerHTML = `
      <div class="predictive-search-status">
        <p>Aucun r√©sultat pour "<strong>${escapeHtml(query)}</strong>"</p>
        <p style="margin-top: 0.5rem; font-size: 0.8125rem; color: var(--color-gray-500);">Essayez avec un autre terme de recherche</p>
      </div>
    `;
    resultsEl.classList.add('is-visible');
  }
  
  // === HELPERS ===
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  // === EVENT LISTENER ===
  searchInput.addEventListener('input', function(e) {
    clearTimeout(searchTimeout);
    
    const query = e.target.value.trim();
    
    if (query.length < 2) {
      resultsEl.classList.remove('is-visible');
      resultsEl.innerHTML = '';
      loadingEl.classList.remove('is-active');
      return;
    }
    
    // Debounce 300ms
    searchTimeout = setTimeout(function() {
      performSearch(query);
    }, 300);
  });
  
})();
</script>
