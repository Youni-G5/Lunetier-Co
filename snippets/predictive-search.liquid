{% comment %}
  Snippet: Recherche Prédictive
  Affiche les résultats de recherche en temps réel avec cartes produits
{% endcomment %}

<div class="predictive-search" id="PredictiveSearch-{{ section_id }}" role="status" aria-live="polite">
  <div class="predictive-search-loading" id="PredictiveSearchLoading-{{ section_id }}">
    <span class="predictive-search-spinner"></span>
    <span>Recherche en cours...</span>
  </div>
  
  <div class="predictive-search-results" id="PredictiveSearchResults-{{ section_id }}">
    <!-- Résultats injectés par JavaScript -->
  </div>
</div>

<style>
/* === PREDICTIVE SEARCH === */
.predictive-search {
  width: 100%;
  max-height: calc(100vh - 200px);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  margin-top: 2rem;
}

.predictive-search-loading {
  display: none;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  padding: 2rem;
  color: var(--color-gray-600);
  font-size: 0.875rem;
}

.predictive-search-loading.is-active {
  display: flex;
}

.predictive-search-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid var(--color-gray-200);
  border-top-color: var(--color-black);
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.predictive-search-results {
  display: none;
}

.predictive-search-results.is-visible {
  display: block;
}

.predictive-search-status {
  padding: 2rem;
  text-align: center;
  color: var(--color-gray-600);
  font-size: 0.875rem;
}

/* === RESULTS GRID === */
.predictive-search-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 1.5rem;
  padding: 0;
  margin: 0;
}

@media (max-width: 768px) {
  .predictive-search-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
}

/* === PRODUCT CARD === */
.predictive-search-card {
  display: block;
  text-decoration: none;
  border-radius: 8px;
  overflow: hidden;
  background: var(--color-white);
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.predictive-search-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.predictive-search-card-image {
  position: relative;
  width: 100%;
  padding-top: 125%;
  background-color: var(--color-gray-50);
  overflow: hidden;
}

.predictive-search-card-image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--transition-base);
}

.predictive-search-card:hover .predictive-search-card-image img {
  transform: scale(1.05);
}

.predictive-search-card-info {
  padding: 1rem;
}

.predictive-search-card-title {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--color-black);
  margin: 0 0 0.5rem 0;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-family: var(--font-serif);
}

.predictive-search-card-price {
  font-size: 0.9375rem;
  font-weight: 600;
  color: var(--color-black);
  font-family: var(--font-sans);
}

.predictive-search-card-price--compare {
  text-decoration: line-through;
  color: var(--color-gray-400);
  font-weight: 400;
  margin-right: 0.5rem;
}

.predictive-search-card-price--sale {
  color: var(--color-red, #dc2626);
}

/* === VIEW ALL === */
.predictive-search-footer {
  padding: 1.5rem 0;
  text-align: center;
  border-top: 1px solid var(--color-gray-100);
  margin-top: 2rem;
}

.predictive-search-view-all {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background-color: var(--color-black);
  color: var(--color-white);
  text-decoration: none;
  border-radius: 4px;
  font-size: 0.875rem;
  font-weight: 500;
  transition: opacity var(--transition-fast);
  font-family: var(--font-sans);
}

.predictive-search-view-all:hover {
  opacity: 0.8;
}
</style>

<script>
(function() {
  'use strict';
  
  const sectionId = '{{ section_id }}';
  const searchInput = document.getElementById('SearchInput-' + sectionId);
  const loadingEl = document.getElementById('PredictiveSearchLoading-' + sectionId);
  const resultsEl = document.getElementById('PredictiveSearchResults-' + sectionId);
  
  if (!searchInput || !loadingEl || !resultsEl) return;
  
  let searchTimeout;
  let currentQuery = '';
  
  // === SEARCH FUNCTION ===
  function performSearch(query) {
    if (query.length < 2) {
      resultsEl.classList.remove('is-visible');
      resultsEl.innerHTML = '';
      return;
    }
    
    currentQuery = query;
    
    // Show loading
    loadingEl.classList.add('is-active');
    resultsEl.classList.remove('is-visible');
    
    // Shopify Predictive Search API
    const url = `/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=8`;
    
    fetch(url)
      .then(response => response.json())
      .then(data => {
        loadingEl.classList.remove('is-active');
        
        if (data.resources.results.products && data.resources.results.products.length > 0) {
          displayResults(data.resources.results.products, query);
        } else {
          displayNoResults(query);
        }
      })
      .catch(error => {
        console.error('Search error:', error);
        loadingEl.classList.remove('is-active');
        displayError();
      });
  }
  
  // === DISPLAY RESULTS ===
  function displayResults(products, query) {
    let html = '<div class="predictive-search-grid">';
    
    products.forEach(product => {
      const price = formatMoney(product.price);
      const comparePrice = product.compare_at_price_max > product.price 
        ? formatMoney(product.compare_at_price_max) 
        : null;
      
      html += `
        <a href="${product.url}" class="predictive-search-card">
          <div class="predictive-search-card-image">
            ${product.featured_image 
              ? `<img src="${product.featured_image}" alt="${escapeHtml(product.title)}" loading="lazy">` 
              : '<div style="background: var(--color-gray-100); width: 100%; height: 100%;"></div>'}
          </div>
          <div class="predictive-search-card-info">
            <h3 class="predictive-search-card-title">${escapeHtml(product.title)}</h3>
            <div class="predictive-search-card-price">
              ${comparePrice ? `<span class="predictive-search-card-price--compare">${comparePrice}</span>` : ''}
              <span class="${comparePrice ? 'predictive-search-card-price--sale' : ''}">${price}</span>
            </div>
          </div>
        </a>
      `;
    });
    
    html += '</div>';
    
    html += `
      <div class="predictive-search-footer">
        <a href="/search?q=${encodeURIComponent(query)}" class="predictive-search-view-all">
          <span>Voir tous les résultats</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    `;
    
    resultsEl.innerHTML = html;
    resultsEl.classList.add('is-visible');
  }
  
  // === NO RESULTS ===
  function displayNoResults(query) {
    resultsEl.innerHTML = `
      <div class="predictive-search-status">
        <p>Aucun résultat pour "<strong>${escapeHtml(query)}</strong>"</p>
      </div>
    `;
    resultsEl.classList.add('is-visible');
  }
  
  // === ERROR ===
  function displayError() {
    resultsEl.innerHTML = `
      <div class="predictive-search-status">
        <p>Une erreur est survenue. Veuillez réessayer.</p>
      </div>
    `;
    resultsEl.classList.add('is-visible');
  }
  
  // === HELPERS ===
  function formatMoney(cents) {
    return (cents / 100).toFixed(2).replace('.', ',') + ' €';
  }
  
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  // === EVENT LISTENER ===
  searchInput.addEventListener('input', function(e) {
    clearTimeout(searchTimeout);
    
    const query = e.target.value.trim();
    
    if (query.length < 2) {
      resultsEl.classList.remove('is-visible');
      resultsEl.innerHTML = '';
      return;
    }
    
    // Debounce 300ms
    searchTimeout = setTimeout(function() {
      performSearch(query);
    }, 300);
  });
  
})();
</script>
