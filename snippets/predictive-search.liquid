{% comment %}
  Snippet: Predictive Search
  Displays real-time search results with product cards
{% endcomment %}

<div class="predictive-search" id="PredictiveSearch-{{ section_id }}" role="status" aria-live="polite">
  <div class="predictive-search-loading" id="PredictiveSearchLoading-{{ section_id }}">
    <span class="predictive-search-spinner"></span>
    <span>Searching...</span>
  </div>
  
  <div class="predictive-search-results" id="PredictiveSearchResults-{{ section_id }}">
    <!-- Results injected by JavaScript -->
  </div>
</div>

<style>
/* === PREDICTIVE SEARCH === */
.predictive-search {
  width: 100%;
  margin-top: 2rem;
}

.predictive-search-loading {
  display: none;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  padding: 3rem;
  color: var(--color-gray-600);
  font-size: 0.875rem;
  font-family: var(--font-sans);
}

.predictive-search-loading.is-active {
  display: flex;
}

.predictive-search-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid var(--color-gray-200);
  border-top-color: var(--color-black);
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.predictive-search-results {
  display: none;
}

.predictive-search-results.is-visible {
  display: block;
}

.predictive-search-status {
  padding: 3rem;
  text-align: center;
  color: var(--color-gray-600);
  font-size: 0.9375rem;
  font-family: var(--font-sans);
}

/* === RESULTS GRID (Identical to product-card.css) === */
.predictive-search-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
  padding: 0;
  margin: 0 0 2rem 0;
}

@media (min-width: 768px) {
  .predictive-search-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
}

/* === PRODUCT CARD (Adapted from product-card.css) === */
.predictive-search-card {
  position: relative;
  width: 100%;
  display: block;
  text-decoration: none;
  color: inherit;
  cursor: pointer;
  transition: opacity var(--transition-fast);
}

/* IMAGE WRAPPER */
.predictive-search-card-image-wrapper {
  position: relative;
  aspect-ratio: 4 / 5;
  background-color: var(--color-gray-50, #f9fafb);
  margin-bottom: 1rem;
  overflow: hidden;
}

@media (max-width: 640px) {
  .predictive-search-card-image-wrapper {
    aspect-ratio: 3 / 4;
  }
}

/* IMAGE */
.predictive-search-card-image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  transition: opacity var(--transition-base), transform var(--transition-slow);
}

/* Zoom on hover */
.predictive-search-card:hover .predictive-search-card-image-wrapper img {
  transform: scale(1.08);
}

/* PLACEHOLDER */
.predictive-search-card-placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40%;
  height: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.predictive-search-card-placeholder svg {
  width: 100%;
  height: 100%;
  color: var(--color-gray-300);
}

/* INFO CONTAINER */
.predictive-search-card-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1rem;
  font-family: var(--font-sans);
}

@media (max-width: 640px) {
  .predictive-search-card-info {
    flex-direction: column;
    gap: 0.5rem;
  }
}

.predictive-search-card-details {
  flex: 1;
  min-width: 0;
}

/* TITLE */
.predictive-search-card-title {
  font-size: 1rem;
  font-weight: 500;
  margin: 0 0 0.25rem 0;
  color: var(--color-black);
  line-height: 1.3;
  transition: opacity var(--transition-fast);
}

@media (min-width: 768px) {
  .predictive-search-card-title {
    font-size: 1.125rem;
  }
}

.predictive-search-card:hover .predictive-search-card-title {
  opacity: 0.7;
}

/* PRICE WRAPPER */
.predictive-search-card-price-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 0.25rem;
  flex-shrink: 0;
}

@media (max-width: 640px) {
  .predictive-search-card-price-wrapper {
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
  }
}

/* PRICE */
.predictive-search-card-price {
  font-size: 1rem;
  font-weight: 600;
  color: var(--color-black);
  white-space: nowrap;
}

.predictive-search-card-price--sale {
  color: var(--color-error, #dc2626);
}

.predictive-search-card-price--compare {
  font-size: 0.875rem;
  color: var(--color-gray-400);
  text-decoration: line-through;
  white-space: nowrap;
}

/* === VIEW ALL === */
.predictive-search-footer {
  padding: 2rem 0 0 0;
  text-align: center;
  border-top: 1px solid var(--color-gray-100);
}

.predictive-search-view-all {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 1rem 2rem;
  background-color: var(--color-black);
  color: var(--color-white);
  text-decoration: none;
  border-radius: 4px;
  font-size: 0.875rem;
  font-weight: 500;
  transition: opacity var(--transition-fast);
  font-family: var(--font-sans);
}

.predictive-search-view-all:hover {
  opacity: 0.85;
}

.predictive-search-view-all svg {
  width: 16px;
  height: 16px;
}
</style>

<script>
(function() {
  'use strict';
  
  const sectionId = '{{ section_id }}';
  const searchInput = document.getElementById('SearchInput-' + sectionId);
  const loadingEl = document.getElementById('PredictiveSearchLoading-' + sectionId);
  const resultsEl = document.getElementById('PredictiveSearchResults-' + sectionId);
  
  if (!searchInput || !loadingEl || !resultsEl) {
    console.error('‚ùå Predictive search: Missing elements');
    return;
  }
  
  console.log('‚úÖ Predictive search initialized');
  
  let searchTimeout;
  
  // === FORMAT MONEY ===
  function formatMoney(price) {
    // Price can be a string "45.00" or a number 4500
    let priceFloat;
    
    if (typeof price === 'string') {
      // "45.00" -> 45.00
      priceFloat = parseFloat(price);
    } else {
      // 4500 -> 45.00
      priceFloat = price / 100;
    }
    
    return priceFloat.toFixed(2).replace('.', ',') + ' ‚Ç¨';
  }
  
  // === SEARCH FUNCTION ===
  function performSearch(query) {
    if (query.length < 2) {
      resultsEl.classList.remove('is-visible');
      resultsEl.innerHTML = '';
      return;
    }
    
    console.log('üîç Searching for:', query);
    
    // Show loading
    loadingEl.classList.add('is-active');
    resultsEl.classList.remove('is-visible');
    
    // ‚úÖ LIMIT 4 PRODUCTS
    const url = `/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=4`;
    
    fetch(url)
      .then(response => response.json())
      .then(data => {
        loadingEl.classList.remove('is-active');
        
        if (data.resources?.results?.products?.length > 0) {
          console.log('‚úÖ Products found:', data.resources.results.products.length);
          displayResults(data.resources.results.products, query);
        } else {
          console.log('‚ö†Ô∏è No products found');
          displayNoResults(query);
        }
      })
      .catch(error => {
        console.error('‚ùå Search error:', error);
        loadingEl.classList.remove('is-active');
        displayNoResults(query);
      });
  }
  
  // === DISPLAY RESULTS ===
  function displayResults(products, query) {
    console.log('üé® Displaying', products.length, 'products');
    let html = '<div class="predictive-search-grid">';
    
    products.forEach((product, index) => {
      // Formatted price
      const price = formatMoney(product.price);
      const compareAtPriceMax = parseFloat(product.compare_at_price_max || 0);
      const priceValue = typeof product.price === 'string' ? parseFloat(product.price) : product.price / 100;
      const comparePrice = compareAtPriceMax > priceValue ? formatMoney(product.compare_at_price_max) : null;
      
      console.log(`Product ${index + 1}:`, {
        title: product.title,
        price: price,
        comparePrice: comparePrice,
        featured_image: product.featured_image
      });
      
      // Optimized image
      let imageHtml = '';
      let imageUrl = null;
      
      // ‚úÖ FIX: featured_image is an OBJECT {url: "..."}
      if (product.featured_image) {
        if (typeof product.featured_image === 'object' && product.featured_image.url) {
          imageUrl = product.featured_image.url;
        } else if (typeof product.featured_image === 'string') {
          imageUrl = product.featured_image;
        }
      }
      
      // Fallback to image if featured_image doesn't exist
      if (!imageUrl && product.image) {
        if (typeof product.image === 'object' && product.image.url) {
          imageUrl = product.image.url;
        } else if (typeof product.image === 'string') {
          imageUrl = product.image;
        }
      }
      
      if (imageUrl) {
        // Optimize URL
        const optimizedUrl = imageUrl.includes('?') 
          ? imageUrl.split('?')[0] + '?width=600' 
          : imageUrl + '?width=600';
        imageHtml = `<img src="${optimizedUrl}" alt="${escapeHtml(product.title)}" loading="lazy">`;
      } else {
        imageHtml = `
          <div class="predictive-search-card-placeholder">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
          </div>
        `;
      }
      
      html += `
        <a href="${product.url}" class="predictive-search-card">
          <div class="predictive-search-card-image-wrapper">
            ${imageHtml}
          </div>
          <div class="predictive-search-card-info">
            <div class="predictive-search-card-details">
              <h3 class="predictive-search-card-title">${escapeHtml(product.title)}</h3>
            </div>
            <div class="predictive-search-card-price-wrapper">
              ${comparePrice ? `<span class="predictive-search-card-price--compare">${comparePrice}</span>` : ''}
              <span class="predictive-search-card-price ${comparePrice ? 'predictive-search-card-price--sale' : ''}">${price}</span>
            </div>
          </div>
        </a>
      `;
    });
    
    html += '</div>';
    
    html += `
      <div class="predictive-search-footer">
        <a href="/search?q=${encodeURIComponent(query)}&type=product" class="predictive-search-view-all">
          <span>View all results</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    `;
    
    resultsEl.innerHTML = html;
    resultsEl.classList.add('is-visible');
    console.log('‚úÖ Results displayed!');
  }
  
  // === NO RESULTS ===
  function displayNoResults(query) {
    resultsEl.innerHTML = `
      <div class="predictive-search-status">
        <p>No results for "<strong>${escapeHtml(query)}</strong>"</p>
        <p style="margin-top: 0.5rem; font-size: 0.8125rem; color: var(--color-gray-500);">Try another search term</p>
      </div>
    `;
    resultsEl.classList.add('is-visible');
  }
  
  // === HELPERS ===
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  // === EVENT LISTENER ===
  searchInput.addEventListener('input', function(e) {
    clearTimeout(searchTimeout);
    
    const query = e.target.value.trim();
    
    if (query.length < 2) {
      resultsEl.classList.remove('is-visible');
      resultsEl.innerHTML = '';
      loadingEl.classList.remove('is-active');
      return;
    }
    
    // Debounce 300ms
    searchTimeout = setTimeout(() => performSearch(query), 300);
  });
  
})();
</script>